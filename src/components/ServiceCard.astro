---
export interface Props {
  title: string;
  description: string;
  icon?: string;
  href?: string;
}

const { title, description, icon, href } = Astro.props;

const Component = href ? 'a' : 'div';
---

<Component 
  class="service-card bg-gradient-card border border-primary/20 rounded-lg p-6 transition-all duration-300 hover-lift hover:border-primary/40 block"
  href={href}
>
  {icon && (
    <div class="icon-container text-4xl mb-4 text-primary">
      <span>{icon}</span>
    </div>
  )}
  
  <h3 class="text-xl font-display text-foreground mb-3">
    {title}
  </h3>
  
  <p class="text-muted-foreground leading-relaxed">
    {description}
  </p>
</Component>

<style>
  .service-card {
    position: relative;
    overflow: hidden;
  }
  
  .service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, 
      transparent, 
      oklch(0.75 0.06 80), 
      transparent
    );
    transform: translateX(-100%);
    transition: transform 0.5s ease;
  }
  
  .service-card:hover::before {
    transform: translateX(100%);
  }
  
  .icon-container {
    display: inline-block;
    animation: float-subtle 3s ease-in-out infinite;
  }
  
  @keyframes float-subtle {
    0%, 100% { 
      transform: translateY(0); 
    }
    50% { 
      transform: translateY(-5px); 
    }
  }
</style>