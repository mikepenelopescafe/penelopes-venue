---
export interface Props {
  title: string;
  description: string;
  icon?: string;
  href?: string;
}

const { title, description, icon, href } = Astro.props;

const Component = href ? 'a' : 'div';
---

<Component
  class="service-card bg-gradient-card border border-primary/20 rounded-lg p-6 block"
  href={href}
>
  
  
  <h3 class="text-xl font-display text-foreground mb-3">
    {title}
  </h3>
  
  <p class="text-muted-foreground leading-relaxed">
    {description}
  </p>
</Component>

<style>
  .service-card {
    position: relative;
    overflow: hidden;
  }

  .icon-container {
    display: inline-block;
  }
</style>