---
// Services Section Component - Streamable
import { Badge } from '@/components/ui/badge';
import ServiceCard from '@/components/ServiceCard.astro';

export interface Props {
  services: Array<{
    title: string;
    description: string;
    icon: string;
  }>;
}

const { services } = Astro.props;
---

<section class="py-20 px-6 bg-background" transition:name="services">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <Badge className="mb-4 bg-primary/10 text-primary border-primary/20">Full service</Badge>
      <h2 class="text-4xl font-display text-foreground mb-4">Full‑service, done right</h2>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        Latin‑inspired menus, a thoughtful bar, and a team that keeps it seamless.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      {services.map(service => (
        <ServiceCard
          title={service.title}
          description={service.description}
          icon={service.icon}
        />
      ))}
    </div>
  </div>
</section>
