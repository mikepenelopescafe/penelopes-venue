---
// Venue Statistics Section Component - Streamable
import { Image } from 'astro:assets';
import diningRoomImage from '@/assets/images/penelope-diningroom.jpeg';

export interface Props {
  venueStats: Array<{
    label: string;
    value: string;
    icon: string;
    description?: string;
  }>;
}

const { venueStats } = Astro.props;
---

<section class="relative py-24 px-6 overflow-hidden" transition:name="venue-stats" aria-labelledby="venue-stats-heading" data-ga-section="Venue Stats">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 bg-cover bg-center bg-no-repeat"
       style={`background-image: url('${diningRoomImage.src}');`}>
    <!-- Gradient Overlay for Text Readability -->
    <div class="absolute inset-0 bg-gradient-to-r from-black/80 via-black/60 to-black/40"></div>
    <!-- Subtle Pattern Overlay for Texture -->
    <div class="absolute inset-0 bg-pattern-dots opacity-10"></div>
  </div>

  <!-- Content Container -->
  <div class="relative max-w-6xl mx-auto text-center min-h-[500px] flex items-center">
    <!-- Section Header -->
    <div class="w-full">
      <div class="mb-16">
        <h2 id="venue-stats-heading" class="text-5xl font-display text-white mb-6 leading-tight">
          Your space. <span class="text-primary">Your rules.</span>
        </h2>
        <p class="text-xl text-white/90 max-w-3xl mx-auto leading-relaxed">
          Westminster's boutique venue where Spanish-inspired design meets modern celebrations. 
          <span class="text-primary font-medium">Intimate by design, effortless by nature.</span>
        </p>
      </div>

      <!-- Stats Grid -->
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-6">
        {venueStats.map(stat => (
          <div class="group hover-lift transition-all duration-300">
            <div class="bg-white/10 backdrop-blur-md rounded-xl p-6 border border-white/20 shadow-2xl hover:bg-white/15 transition-all duration-300 text-center">
             
              
              <!-- Value -->
              <div class="text-2xl font-bold text-white mb-2 font-display">
                {stat.value}
              </div>
              
              <!-- Label -->
              <div class="text-primary font-medium text-sm uppercase tracking-wide mb-3">
                {stat.label}
              </div>
              
              <!-- Description -->
              {stat.description && (
                <p class="text-white/80 text-sm leading-relaxed">
                  {stat.description}
                </p>
              )}
            </div>
          </div>
        ))}
      </div>

      <!-- Call to Action -->
      <div class="mt-16">
        <a href="/contact#book" class="btn-primary-lg hero-text-shadow" data-ga-cta="venue-stats-see-the-space">
          See the space
        </a>
        <p class="text-white/70 text-sm mt-4">
          Book a tour • View pricing • Start planning
        </p>
      </div>
    </div>
  </div>
</section>
