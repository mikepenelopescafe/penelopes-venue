---
import { Image } from 'astro:assets';

const currentYear = new Date().getFullYear();

const footerLinks = {
  venue: [
    { label: 'Home', href: '/' },
    { label: 'About Us', href: '/#about' },
    { label: 'Gallery', href: '/gallery' },
    { label: 'Venue Details', href: '/venue' },
  ],
  offerings: [
    { label: 'Venue Pricing', href: '/venue' },
    { label: 'Catering Menu', href: '/catering' },
    { label: 'Book a Tour', href: '/contact#book' },
  ],
  'service-areas': [
    { label: 'Areas We Serve', href: '/service-areas' },
    { label: 'Westminster Venue', href: '/venue' },
    { label: 'Arvada Area', href: '/service-areas/arvada' },
    { label: 'Lakewood Area', href: '/service-areas/lakewood' },
    { label: 'Thornton Area', href: '/service-areas/thornton' },
    { label: 'Denver Area', href: '/service-areas/denver' },
    { label: 'Wheat Ridge Area', href: '/service-areas/wheat-ridge' },
  ],
  resources: [
    { label: 'Event Planning Guide', href: '/venue#planning' },
    { label: 'Venue Types', href: '/venue-types' },
    { label: 'Budget Calculator', href: '/budget-focused' },
    { label: 'Blog', href: '/blog' },
    { label: 'FAQ', href: '/contact#faq' },
  ],
  contact: [
    { label: 'Contact Us', href: '/contact' },
    { label: 'Schedule a Tour', href: '/contact#book' },
    { label: 'General Inquiry', href: '/contact#general' },
    
  ],
};

const contactInfo = {
  address: '8050 Federal Blvd, Westminster, CO 80031',
  phone: '(720) 639-2406',
  hours: '9AM - 11PM',
  email: 'info@penelopesvenue.com'
};
---

<footer class="bg-background/90 backdrop-blur-sm border-t border-primary/20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-8">
      <!-- Brand & Contact Info -->
      <div class="lg:col-span-1">
        <div class="mb-4 flex items-center space-x-2">
          <!-- Logo for dark theme (logo.svg) -->
          <Image id="footer-logo-dark" src="/logo.svg" alt="Penelope's" width={128} height={32} class="h-8 w-auto" />
          <!-- Logo for light theme (logo-lite.svg) -->
          <Image id="footer-logo-light" src="/logo-lite.svg" alt="Penelope's" width={128} height={32} class="h-8 w-auto hidden" />
        </div>
        <p class="text-sm text-muted-foreground mb-4">
          Crafting beautiful experiences in our boutique venue.
        </p>
        <div class="space-y-2 text-sm text-muted-foreground">
          <div class="flex items-start space-x-2">
            <svg class="h-4 w-4 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>{contactInfo.address}</span>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="h-4 w-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <a href={`tel:${contactInfo.phone}`} class="hover:text-primary transition-colors">
              {contactInfo.phone}
            </a>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="h-4 w-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>{contactInfo.hours}</span>
          </div>
        </div>
      </div>

      <!-- Links -->
      <div class="lg:col-span-5 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8">
        <div>
          <h3 id="footer-venue-heading" class="text-sm font-semibold text-primary mb-4">Venue</h3>
          <nav aria-labelledby="footer-venue-heading">
            <ul class="space-y-2">
            {footerLinks.venue.map(link => (
              <li>
                <a href={link.href} class="text-sm text-muted-foreground hover:text-foreground transition-all duration-300">
                  {link.label}
                </a>
              </li>
            ))}
            </ul>
          </nav>
        </div>

        <div>
          <h3 id="footer-offerings-heading" class="text-sm font-semibold text-primary mb-4">Offerings</h3>
          <nav aria-labelledby="footer-offerings-heading">
            <ul class="space-y-2">
            {footerLinks.offerings.map(link => (
              <li>
                <a href={link.href} class="text-sm text-muted-foreground hover:text-foreground transition-all duration-300">
                  {link.label}
                </a>
              </li>
            ))}
            </ul>
          </nav>
        </div>

        <div>
          <h3 id="footer-service-areas-heading" class="text-sm font-semibold text-primary mb-4">Service Areas</h3>
          <nav aria-labelledby="footer-service-areas-heading">
            <ul class="space-y-2">
            {footerLinks['service-areas'].map(link => (
              <li>
                <a href={link.href} class="text-sm text-muted-foreground hover:text-foreground transition-all duration-300">
                  {link.label}
                </a>
              </li>
            ))}
            </ul>
          </nav>
        </div>

        <div>
          <h3 id="footer-resources-heading" class="text-sm font-semibold text-primary mb-4">Resources</h3>
          <nav aria-labelledby="footer-resources-heading">
            <ul class="space-y-2">
            {footerLinks.resources.map(link => (
              <li>
                <a href={link.href} class="text-sm text-muted-foreground hover:text-foreground transition-all duration-300">
                  {link.label}
                </a>
              </li>
            ))}
            </ul>
          </nav>
        </div>
        
        <div>
          <h3 id="footer-contact-heading" class="text-sm font-semibold text-primary mb-4">Contact</h3>
          <nav aria-labelledby="footer-contact-heading">
            <ul class="space-y-2">
            {footerLinks.contact.map(link => (
              <li>
                <a href={link.href} class="text-sm text-muted-foreground hover:text-foreground transition-all duration-300">
                  {link.label}
                </a>
              </li>
            ))}
            </ul>
          </nav>
        </div>
      </div>
    </div>
    
    <!-- Bottom bar -->
    <div class="mt-8 pt-8 border-t border-primary/10">
      <div class="text-center">
        <p class="text-sm text-muted-foreground">
          Â© {currentYear} Penelope's Boutique Venue. All rights reserved.
        </p>
        <p class="text-xs text-muted-foreground/80 mt-2">
          Westminster's Boutique Event Destination
        </p>
      </div>
    </div>
  </div>
</footer>

<!-- Logo switching is now handled centrally in Layout.astro -->