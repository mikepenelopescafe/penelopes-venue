---
// Generate unique IDs to avoid conflicts when component is used multiple times
const uniqueId = Math.random().toString(36).substr(2, 9);
const buttonId = `theme-toggle-${uniqueId}`;
const lightIconId = `light-icon-${uniqueId}`;
const darkIconId = `dark-icon-${uniqueId}`;
---

<button
  id={buttonId}
  class="theme-toggle-btn p-2 rounded-md text-foreground hover:text-primary hover:bg-primary/10 transition-all duration-300"
  aria-label="Toggle theme"
  title="Toggle theme"
  data-light-icon={lightIconId}
  data-dark-icon={darkIconId}
>
  <!-- Light mode icon (sun) - shows when in DARK mode -->
  <svg 
    id={lightIconId}
    class="theme-icon h-5 w-5" 
    fill="none" 
    viewBox="0 0 24 24" 
    stroke="currentColor"
  >
    <path 
      stroke-linecap="round" 
      stroke-linejoin="round" 
      stroke-width="2" 
      d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" 
    />
  </svg>
  
  <!-- Dark mode icon (moon) - shows when in LIGHT mode -->
  <svg 
    id={darkIconId}
    class="theme-icon h-5 w-5 hidden" 
    fill="none" 
    viewBox="0 0 24 24" 
    stroke="currentColor"
  >
    <path 
      stroke-linecap="round" 
      stroke-linejoin="round" 
      stroke-width="2" 
      d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" 
    />
  </svg>
</button>

