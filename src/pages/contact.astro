---
import Layout from '@/layouts/Layout.astro';
import ContactHero from '@/components/ContactHero.astro';
import ContactSection from '@/components/ContactSection.astro';

const seo = {
  title: "Contact Penelope's Venue - Book Your Event Today",
  description: "Ready to host your special event at Penelope's? Contact us today to book your wedding, corporate event, or celebration. We'll help make your vision a reality.",
  keywords: "contact Penelope's venue, book event Westminster, wedding venue contact, event venue booking, Penelope's Cafe venue inquiry",
};
---

<Layout title={seo.title} description={seo.description} keywords={seo.keywords}>
  <ContactHero />

  <div id="book">
    <ContactSection
      title="Book Your Event"
      subtitle="Ready to create unforgettable memories? Let's plan your special celebration together."
      formType="booking"
    />
  </div>

  <div id="general">
    <ContactSection
      title="General Inquiries"
      subtitle="Have questions about our venue, services, or partnership opportunities?"
      formType="general"
    />
  </div>
</Layout>

<style>
  /* Smooth scroll behavior for anchor links */
  html {
    scroll-behavior: smooth;
  }

  /* Ensure proper spacing between sections */
  section {
    scroll-margin-top: 6rem;
  }
</style>
