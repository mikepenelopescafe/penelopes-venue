---
import Layout from '@/layouts/Layout.astro';
import ContactHero from '@/components/ContactHero.astro';
import ContactSection from '@/components/ContactSection.astro';

const seo = {
  title: "Contact Penelope's Venue - Book a Tour",
  description: "Hosting something soon? Reach out to book your date or tour. Casual, moody, eclectic — we’ll keep it easy.",
  keywords: "contact Penelope's venue, book event Westminster, wedding venue contact, event venue booking, Penelope's Cafe venue inquiry",
};
---

<Layout title={seo.title} description={seo.description} keywords={seo.keywords}>
  <ContactHero />

  <div id="book">
    <ContactSection
      title="Schedule a Tour"
      subtitle="Ready to plan something real? Let’s keep it moody, easy, and you."
      formType="booking"
    />
  </div>

  <div id="general">
    <ContactSection
      title="General Inquiries"
      subtitle="Have questions about our venue, services, or partnership opportunities?"
      formType="general"
    />
  </div>
</Layout>

<style>
  /* Smooth scroll behavior for anchor links */
  html {
    scroll-behavior: smooth;
  }

  /* Ensure proper spacing between sections */
  section {
    scroll-margin-top: 6rem;
  }
</style>
