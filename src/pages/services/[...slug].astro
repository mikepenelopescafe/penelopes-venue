---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import { Image } from 'astro:assets';
import { getServicePricing, getRecommendedAddOns } from '@/lib/pricing-utils';

export const prerender = true;

export async function getStaticPaths() {
  const services = await getCollection('services');
  return services.map(service => ({
    params: { slug: service.slug },
    props: { service }
  }));
}

// Handle dynamic routing
const { service } = Astro.props;

const { Content } = await service.render();

// Get pricing information using new utility
const servicePricing = getServicePricing(service);

// Get recommended add-ons if this service has a pricing tier
const recommendedAddOns = service.data.pricingTierId ? 
  getRecommendedAddOns(service.data.pricingTierId) : [];

// SEO metadata
const seo = {
  title: service.data.title,
  description: service.data.description,
  keywords: service.data.keywords?.join(', '),
  canonical: service.data.canonical || Astro.url.href,
  ogImage: service.data.ogImage,
};
---

<Layout title={seo.title} description={seo.description} keywords={seo.keywords} canonical={seo.canonical}>
  <article class="min-h-screen">
    <header class="relative py-24 px-6 overflow-hidden">
      <!-- Background Image with Enhanced Overlay -->
      <div class="absolute inset-0 bg-cover bg-center bg-no-repeat"
           style="background-image: url('/gallery/8050 N Federal Blvd - Web Quality - 011 - 31 Reception Area.jpg');">
        <!-- Enhanced gradient overlay for better text contrast -->
        <div class="absolute inset-0 hero-overlay-enhanced"></div>
        <!-- Subtle pattern overlay for texture -->
        <div class="absolute inset-0 bg-pattern-dots opacity-10"></div>
      </div>
      
      <!-- Content with better contrast -->
      <div class="relative max-w-6xl mx-auto min-h-[500px] flex items-center">
        <div class="w-full">
          <!-- Breadcrumbs with enhanced visibility -->
          <div class="flex items-center gap-2 text-sm text-white/80 mb-6">
            <a href="/" class="hover:text-white transition-colors">Home</a>
            <span>/</span>
            <a href="/services" class="hover:text-white transition-colors">Services</a>
            <span>/</span>
            <span class="text-primary">{service.data.packageName}</span>
          </div>
          
          <!-- Main heading with text shadow -->
          <h1 class="text-4xl md:text-5xl font-display text-white mb-6 hero-text-shadow">
            {service.data.packageName}
          </h1>
          
          <!-- Pricing and info section with dark background for readability -->
          <div class="pricing-info-bg inline-block">
            <div class="flex flex-wrap gap-6 items-center text-white">
              <div class="text-2xl font-medium text-primary">
                {servicePricing.formatted}
              </div>
              <div class="text-lg text-white/90">
                {service.data.capacity.min}-{service.data.capacity.max} guests
              </div>
              <div class="text-sm text-white/80">
                {service.data.location.city}, {service.data.location.state}
              </div>
              <span class="px-4 py-2 bg-primary/20 text-white rounded-full capitalize border border-primary/30">
                {service.data.availability.replace('-', ' ')}
              </span>
            </div>
          </div>
        </div>
      </div>
    </header>
    
    <div class="max-w-6xl mx-auto px-6 py-12 grid lg:grid-cols-3 gap-12">
      <div class="lg:col-span-2">
        <div class="prose prose-lg prose-brand max-w-none service-content">
          <Content />
        </div>
        
        {service.data.gallery && service.data.gallery.length > 0 && (
          <div class="mt-12">
            <h2 class="text-2xl font-serif text-brand-forest mb-6">Gallery</h2>
            <div class="grid grid-cols-2 gap-4">
              {service.data.gallery.map(image => (
                <div class="relative">
                  <Image
                    src={image.src}
                    alt={image.alt}
                    width={300}
                    height={200}
                    class="w-full rounded-lg shadow-md"
                  />
                  {image.caption && (
                    <p class="text-sm text-brand-forest/60 mt-2 text-center">
                      {image.caption}
                    </p>
                  )}
                </div>
              ))}
            </div>
          </div>
        )}
      </div>
      
      <aside class="lg:sticky lg:top-8 h-fit">
        <div class="bg-white rounded-lg shadow-lg p-6 space-y-6">
          <h3 class="text-xl font-serif" style="color: #2a4035;">What’s Included</h3>

          <ul class="space-y-3">
            {service.data.amenities.map(amenity => (
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" style="color: #d6b67e;">
                  <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                </svg>
                <span style="color: #2a4035;">{amenity}</span>
              </li>
            ))}
          </ul>
          
                    <div class="border-t pt-6">
            <div class="space-y-4">
              <div>
                <p class="text-sm mb-1" style="color: #2a4035;">Guests</p>
                <p class="font-medium" style="color: #2a4035;">
                  {service.data.capacity.min} - {service.data.capacity.max}
                </p>
              </div>

              <div>
                <p class="text-sm mb-1" style="color: #2a4035;">Availability</p>
                <p class="font-medium capitalize" style="color: #2a4035;">
                  {service.data.availability.replace('-', ' ')}
                </p>
              </div>

              <div>
                <p class="text-sm mb-1" style="color: #2a4035;">From</p>
                <p class="text-xl font-medium" style="color: #d6b67e;">
                  ${servicePricing.price.toLocaleString()}
                </p>
                {servicePricing.tier && (
                  <p class="text-xs text-muted-foreground">
                    {servicePricing.tier.duration} hours included
                  </p>
                )}
              </div>
            </div>
          <div class="space-y-3">
            {service.data.bookingLink ? (
              <a
                href={service.data.bookingLink}
                class="block w-full text-white text-center px-6 py-3 rounded-md font-medium transition-colors"
                style="background-color: #d6b67e;"
                onmouseover="this.style.backgroundColor='#b8975e'"
                onmouseout="this.style.backgroundColor='#d6b67e'"
              >
                Book Now
              </a>
            ) : (
              <a
                href="/contact"
                class="block w-full text-white text-center px-6 py-3 rounded-md font-medium transition-colors"
                style="background-color: #d6b67e;"
                onmouseover="this.style.backgroundColor='#b8975e'"
                onmouseout="this.style.backgroundColor='#d6b67e'"
              >
                Request Info
              </a>
            )}
            <a
              href={service.data.pricingPageLink || '/pricing'}
              class="block w-full text-center px-6 py-3 rounded-md font-medium transition-colors"
              style="border: 1px solid rgba(42, 64, 53, 0.2); color: #2a4035;"
              onmouseover="this.style.borderColor='rgba(42, 64, 53, 0.4)'"
              onmouseout="this.style.borderColor='rgba(42, 64, 53, 0.2)'"
            >
              See Pricing
            </a>
            <a
              href="/contact"
              class="block w-full text-center px-6 py-3 rounded-md font-medium transition-colors"
              style="border: 1px solid rgba(42, 64, 53, 0.2); color: #2a4035;"
              onmouseover="this.style.borderColor='rgba(42, 64, 53, 0.4)'"
              onmouseout="this.style.borderColor='rgba(42, 64, 53, 0.2)'"
            >
              Book a Tour
            </a>
          </div>

          {/* Add-ons Section - only show if using new pricing system */}
          {recommendedAddOns.length > 0 && (
            <div class="border-t pt-6">
              <h3 class="text-lg font-serif mb-4" style="color: #2a4035;">Popular Add‑ons</h3>
              <div class="space-y-3">
                {recommendedAddOns.map(addOn => (
                  <div class="p-3 bg-primary/5 rounded-lg">
                    <div class="flex justify-between items-start mb-1">
                      <span class="font-medium text-sm" style="color: #2a4035;">{addOn.name}</span>
                      <span class="text-primary font-bold text-sm">{addOn.price}</span>
                    </div>
                    <p class="text-xs text-muted-foreground">{addOn.description}</p>
                  </div>
                ))}
              </div>
              <a
                href="/pricing#add-ons"
                class="block w-full text-center px-4 py-2 rounded-md font-medium transition-colors text-sm mt-4"
                style="border: 1px solid rgba(42, 64, 53, 0.2); color: #2a4035;"
                onmouseover="this.style.borderColor='rgba(42, 64, 53, 0.4)'"
                onmouseout="this.style.borderColor='rgba(42, 64, 53, 0.2)'"
              >
                View All Add-ons
              </a>
            </div>
          )}

          {/* Pricing tier info - show enhanced details if using new system */}
          {servicePricing.tier && (
            <div class="border-t pt-6">
              <h3 class="text-lg font-serif mb-4" style="color: #2a4035;">Details</h3>
              <div class="space-y-2">
                <div class="flex justify-between text-sm">
                  <span style="color: #2a4035;">Duration:</span>
                  <span class="font-medium">{servicePricing.tier.duration} hours</span>
                </div>
                <div class="flex justify-between text-sm">
                  <span style="color: #2a4035;">Guests:</span>
                  <span class="font-medium">
                    {servicePricing.tier.guestRange[0]}-{servicePricing.tier.guestRange[1]} guests
                  </span>
                </div>
              </div>
            </div>
          )}
        </div>
      </aside>
    </div>
  </article>
</Layout>