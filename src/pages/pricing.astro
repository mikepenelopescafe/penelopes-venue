---
import Layout from '@/layouts/Layout.astro';
import { Badge } from '@/components/ui/badge';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';

const seo = {
  title: "Venue Rental Pricing & Packages - Penelope's Boutique Venue",
  description: "Transparent pricing for venue rental, catering, and bar services. Combined venue space (up to 135-145 guests) available 24/7. Flexible time blocks: 3-hour minimum (off-peak), 4-hour, or 8-hour blocks. All-American and Latin fusion catering options.",
  keywords: "venue rental pricing, event venue packages, party venue cost, catering packages, bar service pricing, Spanish stucco venue, 24/7 venue rental, flexible time blocks",
};

const venuePricing = {
  combined: {
    capacity: "Up to 135 guests",
    squareFootage: "1,500 sq ft",
    offPeak: {
      days: "Sundays & Weekdays (Monday-Thursday)",
      threeHour: { price: "$750", rate: "$250/hour" },
      fourHour: { price: "$1,100", rate: "$275/hour" },
      eightHour: { price: "$2,000", rate: "$250/hour" }
    },
    peak: {
      days: "Fridays, Saturdays & Holiday Sundays",
      fourHour: { price: "$1,800", rate: "$450/hour" },
      eightHour: { price: "$3,200", rate: "$400/hour" }
    },
    premium: {
      days: "New Year's Eve, Christmas, Thanksgiving, 4th of July, Halloween",
      fourHour: { price: "$2,500", rate: "$625/hour" },
      eightHour: { price: "$4,500", rate: "$562.50/hour" }
    },
    holidaySundays: {
      days: "U.S. federal holidays observed on Sunday",
      fourHour: { price: "$1,800", rate: "$450/hour" },
      eightHour: { price: "$3,200", rate: "$400/hour" }
    }
  }
};

const addOns = [
  { name: "Microphone", price: "$50", description: "Professional microphone for speeches or announcements" },
  { name: "Projector", price: "$75", description: "HD projector with screen for presentations" },
  { name: "Extended Hours", price: "$250/hour", description: "Beyond selected block, subject to availability" },
  { name: "Bar Service", price: "$300", description: "Includes 1 bartender for 20+ guests; meets $150 drink minimum" }
];

const cateringPackages = {
  american: {
    name: "All-American",
    description: "Hearty, crowd-pleasing dishes with fresh, local ingredients, perfect for bar events or casual gatherings",
    priceRange: "$18-45/guest",
    serviceStyles: {
      plated: "Formal, seated service (+$1-3/guest)",
      buffet: "Casual, self-serve (+$0/guest)",
      passed: "Staff-circulated for mingling (+$1-2/guest)"
    },
    packages: [
      { name: "Bar Bites Package", buffet: "$18/guest", passed: "$20/guest", description: "3 Small Plates + Side. Ideal for casual mixers." },
      { name: "All-American Feast", plated: "$35-45/guest", buffet: "$32-42/guest", description: "Small Plate + Main + Dessert. Perfect for heartier events." }
    ]
  },
  latinFusion: {
    name: "Latin Fusion",
    description: "Vibrant flavors from Mexico, Peru and beyond, aligning with the venue's rustic-modern aesthetic",
    priceRange: "$18-48/guest",
    serviceStyles: {
      plated: "Formal, seated service (+$1-3/guest)",
      buffet: "Casual, self-serve (+$0/guest)",
      passed: "Staff-circulated for mingling (+$1-2/guest)"
    },
    packages: [
      { name: "Tasting Plate", buffet: "$18/guest", passed: "$20/guest", description: "3 Small Plates + Dessert. Great for casual bar events." },
      { name: "Full Latin Feast", plated: "$38-48/guest", buffet: "$35-45/guest", description: "Small Plate + Main + Dessert. Ideal for upscale gatherings." }
    ]
  }
};



const barPackages = [
  { name: "Open Bar (2 hours)", beerWine: "$25/guest", fullBar: "$35/guest", description: "Pre-paid drinks for 2 hours - beer/wine or full bar with cocktails" },
  { name: "Cash Bar", description: "Guests pay per drink, meets $150 minimum via sales" }
];
---

<Layout title={seo.title} description={seo.description} keywords={seo.keywords}>
  <!-- Hero Section -->
  <section class="relative py-24 px-6 overflow-hidden">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 bg-cover bg-center bg-no-repeat"
         style="background-image: url('/gallery/8050 N Federal Blvd - Web Quality - 011 - 31 Reception Area.jpg');">
      <!-- Gradient Overlay for Text Readability -->
      <div class="absolute inset-0 bg-gradient-to-r from-black/80 via-black/60 to-black/40"></div>
      <!-- Subtle Pattern Overlay for Texture -->
      <div class="absolute inset-0 bg-pattern-dots opacity-10"></div>
    </div>

    <!-- Content Container -->
    <div class="relative max-w-6xl mx-auto text-center min-h-[500px] flex items-center">
      <div class="w-full">
        <Badge className="mb-6 bg-primary/10 text-primary border-primary/20 text-lg px-4 py-2">Transparent Pricing</Badge>

        <h1 class="text-5xl font-display text-white mb-6 leading-tight">
          Venue Rental & <span class="text-primary">Package Pricing</span>
        </h1>

        <p class="text-xl text-white/90 max-w-5xl mx-auto leading-relaxed mb-8">
          Welcome to Penélope's Boutique Venue, your Spanish inspiredvenue for anytime events! Rent our venue space
          (up to 135 guests) with flexible time blocks: 3-hour minimum (off-peak only), 4-hour, or 8-hour blocks.
          Includes basic bar setup, ambient lighting, basic linens, and a day-of contact for logistics. Perfect for gatherings
          where you handle the programming, decorations, and additional equipment.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#venue-rental" class="btn-primary-lg">
            View Venue Pricing
          </a>
          <a href="#catering" class="btn-outline-lg">
            Explore Catering
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Venue Rental Pricing Section -->
  <section id="venue-rental" class="py-20 px-6 bg-background">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <Badge className="mb-4 bg-primary/10 text-primary border-primary/20">Venue Rental</Badge>
        <h2 class="text-4xl font-display text-foreground mb-4">Venue Space</h2>
        <p class="text-lg text-muted-foreground max-w-5xl mx-auto">
          Rent the venue space (up to 135-145 guests) anytime, day or night.
          Rentals are offered in flexible time blocks: 3-hour minimum (off-peak only), 4-hour, or 8-hour blocks,
          including setup and cleanup. Includes basic bar setup (tables, chairs, mingling areas), ambient lighting, basic linens,
          and a day-of contact for logistics. Renters handle event programming, decorations, and additional equipment
          (e.g., sound system—add-ons available).
        </p>
      </div>

      <!-- Pricing Cards -->
      <div class="grid lg:grid-cols-2 xl:grid-cols-4 gap-6 mb-12">
        <!-- Off-Peak Pricing (Sundays & Weekdays) -->
        <Card className="bg-card border-primary/20 hover-lift transition-all duration-300">
          <CardHeader className="text-center">
            <CardTitle className="text-xl font-display text-foreground mb-2">Off-Peak</CardTitle>
            <CardDescription className="text-base text-primary font-medium">{venuePricing.combined.offPeak.days}</CardDescription>
            <div class="text-xs text-muted-foreground mt-2">More affordable rates</div>
          </CardHeader>
          <CardContent className="space-y-3">
            <div class="space-y-2 text-center">
              <div class="p-3 bg-primary/5 rounded-lg">
                <div class="text-xs text-muted-foreground mb-1">3-Hour Block</div>
                <div class="text-xl font-bold text-primary">{venuePricing.combined.offPeak.threeHour.price}</div>
                <div class="text-xs text-muted-foreground">{venuePricing.combined.offPeak.threeHour.rate}</div>
              </div>
              <div class="p-3 bg-primary/5 rounded-lg">
                <div class="text-xs text-muted-foreground mb-1">4-Hour Block</div>
                <div class="text-xl font-bold text-primary">{venuePricing.combined.offPeak.fourHour.price}</div>
                <div class="text-xs text-muted-foreground">{venuePricing.combined.offPeak.fourHour.rate}</div>
              </div>
              <div class="p-3 bg-primary/5 rounded-lg">
                <div class="text-xs text-muted-foreground mb-1">8-Hour Block</div>
                <div class="text-xl font-bold text-primary">{venuePricing.combined.offPeak.eightHour.price}</div>
                <div class="text-xs text-muted-foreground">{venuePricing.combined.offPeak.eightHour.rate}</div>
              </div>
            </div>
          </CardContent>
        </Card>

        <!-- Peak Pricing (Fridays & Saturdays) -->
        <Card className="bg-card border-primary/20 hover-lift transition-all duration-300">
          <CardHeader className="text-center">
            <CardTitle className="text-xl font-display text-foreground mb-2">Peak</CardTitle>
            <CardDescription className="text-base text-primary font-medium">Fridays & Saturdays</CardDescription>
            <div class="text-xs text-muted-foreground mt-2">Higher demand periods</div>
          </CardHeader>
          <CardContent className="space-y-3">
            <div class="space-y-2 text-center">
              <div class="p-3 bg-primary/5 rounded-lg">
                <div class="text-xs text-muted-foreground mb-1">4-Hour Block</div>
                <div class="text-xl font-bold text-primary">{venuePricing.combined.peak.fourHour.price}</div>
                <div class="text-xs text-muted-foreground">{venuePricing.combined.peak.fourHour.rate}</div>
              </div>
              <div class="p-3 bg-primary/5 rounded-lg">
                <div class="text-xs text-muted-foreground mb-1">8-Hour Block</div>
                <div class="text-xl font-bold text-primary">{venuePricing.combined.peak.eightHour.price}</div>
                <div class="text-xs text-muted-foreground">{venuePricing.combined.peak.eightHour.rate}</div>
              </div>
            </div>
            <div class="text-center p-2 bg-accent/10 rounded-lg">
              <div class="text-xs text-muted-foreground">3-hour blocks not available</div>
            </div>
          </CardContent>
        </Card>

        <!-- Holiday Sundays -->
        <Card className="bg-card border-primary/20 hover-lift transition-all duration-300">
          <CardHeader className="text-center">
            <CardTitle className="text-xl font-display text-foreground mb-2">Holiday Sundays</CardTitle>
            <CardDescription className="text-base text-primary font-medium">U.S. Federal Holidays</CardDescription>
            <div class="text-xs text-muted-foreground mt-2">Memorial Day, Labor Day, etc.</div>
          </CardHeader>
          <CardContent className="space-y-3">
            <div class="space-y-2 text-center">
              <div class="p-3 bg-primary/5 rounded-lg">
                <div class="text-xs text-muted-foreground mb-1">4-Hour Block</div>
                <div class="text-xl font-bold text-primary">{venuePricing.combined.holidaySundays.fourHour.price}</div>
                <div class="text-xs text-muted-foreground">{venuePricing.combined.holidaySundays.fourHour.rate}</div>
              </div>
              <div class="p-3 bg-primary/5 rounded-lg">
                <div class="text-xs text-muted-foreground mb-1">8-Hour Block</div>
                <div class="text-xl font-bold text-primary">{venuePricing.combined.holidaySundays.eightHour.price}</div>
                <div class="text-xs text-muted-foreground">{venuePricing.combined.holidaySundays.eightHour.rate}</div>
              </div>
            </div>
            <div class="text-center p-2 bg-accent/10 rounded-lg">
              <div class="text-xs text-muted-foreground">3-hour blocks not available</div>
            </div>
          </CardContent>
        </Card>

        <!-- Premium Holiday Pricing -->
        <Card className="bg-card border-primary/20 hover-lift transition-all duration-300">
          <CardHeader className="text-center">
            <CardTitle className="text-xl font-display text-foreground mb-2">Premium Holidays</CardTitle>
            <CardDescription className="text-base text-primary font-medium">Special Dates</CardDescription>
            <div class="text-xs text-muted-foreground mt-2">NYE, Christmas, Thanksgiving, 4th, Halloween</div>
          </CardHeader>
          <CardContent className="space-y-3">
            <div class="space-y-2 text-center">
              <div class="p-3 bg-primary/5 rounded-lg">
                <div class="text-xs text-muted-foreground mb-1">4-Hour Block</div>
                <div class="text-xl font-bold text-primary">{venuePricing.combined.premium.fourHour.price}</div>
                <div class="text-xs text-muted-foreground">{venuePricing.combined.premium.fourHour.rate}</div>
              </div>
              <div class="p-3 bg-primary/5 rounded-lg">
                <div class="text-xs text-muted-foreground mb-1">8-Hour Block</div>
                <div class="text-xl font-bold text-primary">{venuePricing.combined.premium.eightHour.price}</div>
                <div class="text-xs text-muted-foreground">{venuePricing.combined.premium.eightHour.rate}</div>
              </div>
            </div>
            <div class="text-center p-2 bg-accent/10 rounded-lg">
              <div class="text-xs text-muted-foreground">3-hour blocks not available</div>
            </div>
          </CardContent>
        </Card>
      </div>

      <!-- Venue Details -->
      <div class="bg-card/50 rounded-xl p-8 mb-12">
        <div class="text-center mb-8">
          <h3 class="text-2xl font-display text-foreground mb-4">Venue Specifications</h3>
          <div class="grid md:grid-cols-3 gap-6 text-center">
            <div>
              <div class="text-3xl font-bold text-primary mb-2">{venuePricing.combined.capacity}</div>
              <div class="text-muted-foreground">Maximum Capacity</div>
            </div>
            <div>
              <div class="text-3xl font-bold text-primary mb-2">{venuePricing.combined.squareFootage}</div>
              <div class="text-muted-foreground">Total Square Footage</div>
            </div>
            <div>
              <div class="text-3xl font-bold text-primary mb-2">Day & Night</div>
              <div class="text-muted-foreground">Availability</div>
            </div>
          </div>
        </div>
      </div>

      <!-- What's Included -->
      <div class="bg-card/50 rounded-xl p-8 mb-12">
        <h3 class="text-xl font-display text-foreground mb-6 text-center">What's Included in Your Rental</h3>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="text-center">
           
            <h4 class="font-medium text-foreground mb-2">Tables & Chairs</h4>
            <p class="text-sm text-muted-foreground">Complete setup for your event</p>
          </div>
          <div class="text-center">
            
            <h4 class="font-medium text-foreground mb-2">Ambient Lighting</h4>
            <p class="text-sm text-muted-foreground">Warm, welcoming atmosphere</p>
          </div>
          <div class="text-center">
            
            <h4 class="font-medium text-foreground mb-2">Setup & Cleanup</h4>
            <p class="text-sm text-muted-foreground">We handle everything</p>
          </div>
          <div class="text-center">
            
            <h4 class="font-medium text-foreground mb-2">Basic Linens</h4>
            <p class="text-sm text-muted-foreground">White or neutral tablecloths & napkins</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Add-ons Section -->
  <section class="py-20 px-6 bg-card/30">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <Badge className="mb-4 bg-primary/10 text-primary border-primary/20">Enhance Your Event</Badge>
        <h2 class="text-3xl font-display text-foreground mb-4">Optional Add-ons</h2>
        <p class="text-lg text-muted-foreground">
          Customize your experience with these additional services
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        {addOns.map(addon => (
          <div class="p-4 bg-card rounded-lg border border-primary/10">
            <div class="flex items-center justify-between mb-2">
              <span class="font-medium text-foreground">{addon.name}</span>
              <span class="text-primary font-bold">{addon.price}</span>
            </div>
            <p class="text-sm text-muted-foreground">{addon.description}</p>
          </div>
        ))}
      </div>

      <div class="mt-8 text-center">
        <p class="text-sm text-muted-foreground">
          Extended hours available up to 2 additional hours • Subject to availability
        </p>
      </div>
    </div>
  </section>

  <!-- Catering Section -->
  <section id="catering" class="py-20 px-6 bg-background">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <Badge className="mb-4 bg-primary/10 text-primary border-primary/20">Culinary Excellence</Badge>
        <h2 class="text-4xl font-display text-foreground mb-4">Catering Options</h2>
        <p class="text-lg text-muted-foreground max-w-5xl mx-auto">
          Customize your event with catering from our full kitchen, a unique feature offering all-American or Latin fusion menus.
          Pricing varies by service style: plated (formal, seated), buffet (self-serve, casual), or passed appetizers (circulated by staff for mingling).
          Disclose allergies 7 days prior.
        </p>
      </div>

      

      <!-- All-American Catering Section -->
      <div class="bg-card/50 rounded-xl p-8 mb-12">
        <div class="text-center mb-8">
          <h3 class="text-3xl font-display text-foreground mb-4">All-American Catering</h3>
          <p class="text-lg text-muted-foreground max-w-2xl mx-auto">{cateringPackages.american.description}</p>
          
        </div>

        <!-- Packages -->
        <div class="grid md:grid-cols-2 gap-6">
          {cateringPackages.american.packages.map(pkg => (
            <div class="bg-primary/5 rounded-lg p-6">
              <div class="flex justify-between items-start mb-2">
                <h4 class="font-medium text-foreground">{pkg.name}</h4>
                <div class="text-right">
                  {pkg.plated && <div class="text-primary font-bold">{pkg.plated}</div>}
                  {pkg.buffet && <div class="text-sm text-primary font-bold">{pkg.buffet}</div>}
                  {pkg.passed && <div class="text-sm text-primary font-bold">{pkg.passed}</div>}
                </div>
              </div>
              <p class="text-sm text-muted-foreground">{pkg.description}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- Latin Fusion Catering Section -->
      <div class="bg-card/50 rounded-xl p-8 mb-12">
        <div class="text-center mb-8">
          <h3 class="text-3xl font-display text-foreground mb-4">Latin Fusion Catering</h3>
          <p class="text-lg text-muted-foreground max-w-2xl mx-auto">{cateringPackages.latinFusion.description}</p>
          
        </div>

        <!-- Packages -->
        <div class="grid md:grid-cols-2 gap-6">
          {cateringPackages.latinFusion.packages.map(pkg => (
            <div class="bg-primary/5 rounded-lg p-6">
              <div class="flex justify-between items-start mb-2">
                <h4 class="font-medium text-foreground">{pkg.name}</h4>
                <div class="text-right">
                  {pkg.plated && <div class="text-primary font-bold">{pkg.plated}</div>}
                  {pkg.buffet && <div class="text-sm text-primary font-bold">{pkg.buffet}</div>}
                  {pkg.passed && <div class="text-sm text-primary font-bold">{pkg.passed}</div>}
                </div>
              </div>
              <p class="text-sm text-muted-foreground">{pkg.description}</p>
            </div>
          ))}
        </div>
      </div>

        <!-- Catering Notes -->
        <div class="bg-primary/5 rounded-lg p-6">
          <h4 class="text-lg font-display text-foreground mb-4">Catering Notes</h4>
          <div class="space-y-3 text-sm">
            <div class="flex items-start gap-3">
              <div class="text-primary font-bold">*</div>
              <div>
                <strong class="text-foreground">Plated:</strong>
                <span class="text-muted-foreground ml-1">Formal, seated service, higher pricing due to staff labor ($1-3/guest more than buffet). Best for upscale events.</span>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <div class="text-primary font-bold">*</div>
              <div>
                <strong class="text-foreground">Buffet:</strong>
                <span class="text-muted-foreground ml-1">Casual, self-serve setup, lower pricing, ideal for relaxed gatherings.</span>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <div class="text-primary font-bold">*</div>
              <div>
                <strong class="text-foreground">Passed Appetizers:</strong>
                <span class="text-muted-foreground ml-1">Staff circulate small plates for mingling events, priced higher ($1-2/guest more than buffet) due to service. Best for bar-style events.</span>
              </div>
            </div>
            
            
          </div>
        </div>
      </div>

      <!-- Dietary Information -->
      <div class="bg-card/50 rounded-xl p-8">
        <h3 class="text-xl font-display text-foreground mb-4 text-center">Dietary Accommodations</h3>
        <div class="grid md:grid-cols-3 gap-6 text-center">
          <div>
            
            <h4 class="font-medium text-foreground mb-2">Vegetarian & Vegan</h4>
            <p class="text-sm text-muted-foreground">Multiple options available</p>
          </div>
          <div>
            
            <h4 class="font-medium text-foreground mb-2">Allergen Aware</h4>
            <p class="text-sm text-muted-foreground">Gluten-free and nut-free options</p>
          </div>
          <div>
          
            <h4 class="font-medium text-foreground mb-2">Custom Requests</h4>
            <p class="text-sm text-muted-foreground">Disclose allergies 7 days prior</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Bar Service Section -->
  <section class="py-20 px-6 bg-card/30">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <Badge className="mb-4 bg-primary/10 text-primary border-primary/20">Premium Beverages</Badge>
        <h2 class="text-3xl font-display text-foreground mb-4">Bar Service & Packages</h2>
        <p class="text-lg text-muted-foreground">
          Choose between All-American or Latin-Inspired bar menus to perfectly complement your catering choice
        </p>
      </div>

      <!-- Bar Service Add-on -->
      <div class="bg-card rounded-xl p-8 mb-8">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between">
          <div>
            <h3 class="text-xl font-display text-foreground mb-2">Professional Bar Service</h3>
            <p class="text-muted-foreground mb-4 md:mb-0">Includes 1 bartender for 20+ guests • No outside alcohol permitted • Meets $150 drink minimum</p>
          </div>
          <div class="text-right">
            <div class="text-2xl font-bold text-primary">$300</div>
            <div class="text-sm text-muted-foreground">Setup fee</div>
          </div>
        </div>
      </div>

      <!-- Bar Packages -->
      <div class="space-y-6">
        {barPackages.map(pkg => (
          <Card className="bg-card border-primary/20">
            <CardContent className="p-6">
              <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                <div>
                  <h4 class="font-medium text-foreground mb-1">{pkg.name}</h4>
                  {pkg.description && <p class="text-sm text-muted-foreground">{pkg.description}</p>}
                </div>
                {pkg.beerWine && (
                  <div class="text-right mt-4 md:mt-0">
                    <div class="text-lg font-bold text-primary">{pkg.beerWine}</div>
                    <div class="text-sm text-muted-foreground">Beer & Wine</div>
                  </div>
                )}
                {pkg.fullBar && (
                  <div class="text-right mt-4 md:mt-0 md:ml-6">
                    <div class="text-lg font-bold text-primary">{pkg.fullBar}</div>
                    <div class="text-sm text-muted-foreground">Full Bar</div>
                  </div>
                )}
              </div>
            </CardContent>
          </Card>
        ))}
      </div>

      <!-- Bar Menu Note -->
      <div class="mt-8 text-center">
