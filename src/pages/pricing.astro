---
export const prerender = true;

import Layout from '@/layouts/Layout.astro';
import { Badge } from '@/components/ui/badge';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { pricingTiers, addOnPricing, cateringPackages, barPackages, venuePricing } from '@/data/pricing';
import { formatPrice, formatPriceRange, getServicesByCategory, getServiceSlugForTierId } from '@/lib/pricing-utils';

const seo = {
  title: "Event Venue Pricing & Packages - Penelope's Boutique Venue",
  description: "Transparent pricing for weddings, corporate events, and social celebrations. Event packages starting at $750 with venue, catering, and bar service options in Westminster, CO.",
  keywords: "event venue pricing, wedding venue packages, corporate event cost, party venue rates, Westminster Colorado venue pricing, transparent event pricing",
};

// Get services by category for display
const servicesByCategory = getServicesByCategory();

// Add-ons for display
const popularAddOns = [
  addOnPricing.catering,
  addOnPricing.bar,
  addOnPricing.photoBooth,
  addOnPricing.flowers,
  addOnPricing['extended-hours'],
  addOnPricing['upgraded-linens']
];
---

<Layout title={seo.title} description={seo.description} keywords={seo.keywords}>
  <!-- Hero Section -->
  <section class="relative py-24 px-6 overflow-hidden" transition:name="pricing-hero">
    <!-- Dark Black Gradient Background -->
    <div class="absolute inset-0 bg-gradient-to-r from-black/80 via-black/60 to-black/40"></div>
    <!-- Subtle Pattern Overlay for Texture -->
    <div class="absolute inset-0 bg-pattern-dots opacity-10"></div>

    <!-- Content Container -->
    <div class="relative max-w-6xl mx-auto text-center min-h-[500px] flex items-center">
      <div class="w-full">
        <Badge className="mb-6 bg-primary/10 text-primary border-primary/20 text-lg px-4 py-2">Transparent Pricing</Badge>

        <h1 class="text-5xl font-display text-white mb-6 leading-tight">
          Simple, Clear <span class="text-primary">Event Pricing</span>
        </h1>

        <p class="text-xl text-white/90 max-w-5xl mx-auto leading-relaxed mb-8">
          Choose your event type, see what's included, and get transparent pricing. No hidden fees, no surprises.
          From intimate celebrations to grand weddings, we have packages designed for every occasion.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#wedding-packages" class="btn-primary-lg">
            View Wedding Packages
          </a>
          <a href="#event-packages" class="btn-outline-lg">
            Explore All Events
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Wedding Packages Section -->
  <section id="wedding-packages" class="py-20 px-6 bg-background" transition:name="wedding-pricing">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <Badge className="mb-4 bg-primary/10 text-primary border-primary/20">Wedding Celebrations</Badge>
        <h2 class="text-4xl font-display text-foreground mb-4">Wedding Packages</h2>
        <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
          From intimate elopements to grand celebrations, our wedding packages include everything you need for your perfect day.
        </p>
      </div>

      <!-- Wedding Package Cards -->
      <div class="grid lg:grid-cols-2 gap-6 mb-12">
        {Object.values(servicesByCategory.weddings).map(tier => (
          <Card className={`bg-card border-primary/20 hover-lift transition-all duration-300 ${tier.popular ? 'ring-2 ring-primary/20' : ''}`}>
            <CardHeader className="text-center relative">
              {tier.popular && (
                <div class="absolute -top-3 left-1/2 transform -translate-x-1/2">
                  <Badge className="bg-primary text-primary-foreground">Most Popular</Badge>
                </div>
              )}
              <CardTitle className="text-xl font-display text-foreground mb-2">{tier.name}</CardTitle>
              <CardDescription className="text-sm text-muted-foreground mb-4">{tier.description}</CardDescription>
              <div class="text-3xl font-bold text-primary mb-2">
                ${tier.pricing ? Object.values(tier.pricing).filter(p => p !== undefined)[0]?.toLocaleString() : tier.basePrice?.toLocaleString() || 'Contact for pricing'}
              </div>
              <div class="text-sm text-muted-foreground">
                {tier.guestRange[0]}-{tier.guestRange[1]} guests • {tier.duration} hours
              </div>
            </CardHeader>
            <CardContent className="space-y-4">
              <div>
                <h4 class="font-medium text-foreground mb-2">Included:</h4>
                <ul class="space-y-1 text-sm text-muted-foreground">
                  {tier.includes.slice(0, 4).map(item => (
                    <li class="flex items-start gap-2">
                      <svg class="w-4 h-4 mt-0.5 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                      </svg>
                      <span>{item}</span>
                    </li>
                  ))}
                  {tier.includes.length > 4 && (
                    <li class="text-xs text-primary">+ {tier.includes.length - 4} more included</li>
                  )}
                </ul>
              </div>
              
              <div class="pt-4 space-y-2">
                <a
                  href={`/contact?service=${tier.id}`}
                  class="block w-full text-center px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors text-sm font-medium"
                >
                  Get This Package
                </a>
                <a
                  href={`/services/${getServiceSlugForTierId(tier.id)}`}
                  class="block w-full text-center px-4 py-2 border border-primary/20 text-foreground rounded-md hover:bg-primary/5 transition-colors text-sm"
                >
                  View Details
                </a>
              </div>
            </CardContent>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Social Events Section -->
  <section id="event-packages" class="py-20 px-6 bg-card/30">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <Badge className="mb-4 bg-primary/10 text-primary border-primary/20">Social Celebrations</Badge>
        <h2 class="text-4xl font-display text-foreground mb-4">Social Event Packages</h2>
        <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
          Celebrate life's special moments with packages designed for birthdays, anniversaries, showers, and more.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-6 mb-16">
        {Object.values(servicesByCategory.social).map(tier => (
          <Card className="bg-card border-primary/20 hover-lift transition-all duration-300">
            <CardHeader className="text-center">
              <CardTitle className="text-lg font-display text-foreground mb-2">{tier.name}</CardTitle>
              <CardDescription className="text-sm text-muted-foreground mb-4">{tier.description}</CardDescription>
              <div class="text-2xl font-bold text-primary mb-2">
                ${tier.pricing ? Object.values(tier.pricing).filter(p => p !== undefined)[0]?.toLocaleString() : tier.basePrice?.toLocaleString() || 'Contact for pricing'}
              </div>
              <div class="text-sm text-muted-foreground">
                {tier.guestRange[0]}-{tier.guestRange[1]} guests • {tier.duration} hours
              </div>
            </CardHeader>
            <CardContent className="space-y-4">
              <div>
                <h4 class="font-medium text-foreground mb-2">Included:</h4>
                <ul class="space-y-1 text-sm text-muted-foreground">
                  {tier.includes.slice(0, 3).map(item => (
                    <li class="flex items-start gap-2">
                      <svg class="w-4 h-4 mt-0.5 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                      </svg>
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
              
              <div class="pt-4 space-y-2">
                <a
                  href={`/contact?service=${tier.id}`}
                  class="block w-full text-center px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors text-sm font-medium"
                >
                  Book This Event
                </a>
                <a
                  href={`/services/${getServiceSlugForTierId(tier.id)}`}
                  class="block w-full text-center px-4 py-2 border border-primary/20 text-foreground rounded-md hover:bg-primary/5 transition-colors text-sm"
                >
                  View Details
                </a>
              </div>
            </CardContent>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Corporate Events Section -->
  <section class="py-20 px-6 bg-background">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <Badge className="mb-4 bg-primary/10 text-primary border-primary/20">Corporate Events</Badge>
        <h2 class="text-4xl font-display text-foreground mb-4">Corporate Packages</h2>
        <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
          Professional event spaces for meetings, team celebrations, and corporate galas.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6 mb-16">
        {Object.values(servicesByCategory.corporate).map(tier => (
          <Card className="bg-card border-primary/20 hover-lift transition-all duration-300">
            <CardHeader className="text-center">
              <CardTitle className="text-lg font-display text-foreground mb-2">{tier.name}</CardTitle>
              <CardDescription className="text-sm text-muted-foreground mb-4">{tier.description}</CardDescription>
              <div class="text-2xl font-bold text-primary mb-2">
                ${tier.pricing ? Object.values(tier.pricing).filter(p => p !== undefined)[0]?.toLocaleString() : tier.basePrice?.toLocaleString() || 'Contact for pricing'}
              </div>
              <div class="text-sm text-muted-foreground">
                {tier.guestRange[0]}-{tier.guestRange[1]} guests • {tier.duration} hours
              </div>
            </CardHeader>
            <CardContent className="space-y-4">
              <div>
                <h4 class="font-medium text-foreground mb-2">Included:</h4>
                <ul class="space-y-1 text-sm text-muted-foreground">
                  {tier.includes.slice(0, 3).map(item => (
                    <li class="flex items-start gap-2">
                      <svg class="w-4 h-4 mt-0.5 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                      </svg>
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
              
              <div class="pt-4 space-y-2">
                <a
                  href={`/contact?service=${tier.id}`}
                  class="block w-full text-center px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors text-sm font-medium"
                >
                  Book This Event
                </a>
                <a
                  href={`/services/${getServiceSlugForTierId(tier.id)}`}
                  class="block w-full text-center px-4 py-2 border border-primary/20 text-foreground rounded-md hover:bg-primary/5 transition-colors text-sm"
                >
                  View Details
                </a>
              </div>
            </CardContent>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Add-ons Section -->
  <section class="py-20 px-6 bg-card/30">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <Badge className="mb-4 bg-primary/10 text-primary border-primary/20">Customize Your Event</Badge>
        <h2 class="text-3xl font-display text-foreground mb-4">Popular Add-ons</h2>
        <p class="text-lg text-muted-foreground">
          Enhance your celebration with these additional services
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {popularAddOns.map(addon => (
          <Card className="bg-card border-primary/20 hover-lift transition-all duration-300">
            <CardContent className="p-6">
              <div class="flex items-start justify-between mb-3">
                <div>
                  <h3 class="font-medium text-foreground mb-1">{addon.name}</h3>
                  <p class="text-sm text-muted-foreground">{addon.description}</p>
                </div>
                <div class="text-right">
                  {addon.pricing.perGuest && (
                    <div class="text-lg font-bold text-primary">
                      ${addon.pricing.perGuest}/guest
                    </div>
                  )}
                  {addon.pricing.fixed && (
                    <div class="text-lg font-bold text-primary">
                      ${addon.pricing.fixed}
                    </div>
                  )}
                  {addon.pricing.setup && (
                    <div class="text-xs text-muted-foreground">
                      +${addon.pricing.setup} setup
                    </div>
                  )}
                </div>
              </div>
            </CardContent>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Venue Details Section -->
  <section class="py-20 px-6 bg-background">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <Badge className="mb-4 bg-primary/10 text-primary border-primary/20">Venue Details</Badge>
        <h2 class="text-4xl font-display text-foreground mb-4">What's Always Included</h2>
        <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
          Every package includes these venue amenities and services at no additional cost
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 20 20">
              <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
            </svg>
          </div>
          <h3 class="font-medium text-foreground mb-2">Tables & Chairs</h3>
          <p class="text-sm text-muted-foreground">Complete seating arrangements for your guest count</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 20 20">
              <path d="M11 3a1 1 0 10-2 0v1a1 1 0 102 0V3zM15.657 5.757a1 1 0 00-1.414-1.414l-.707.707a1 1 0 001.414 1.414l.707-.707zM18 10a1 1 0 01-1 1h-1a1 1 0 110-2h1a1 1 0 011 1zM5.05 6.464A1 1 0 106.464 5.05l-.707-.707a1 1 0 00-1.414 1.414l.707.707zM5 10a1 1 0 01-1 1H3a1 1 0 110-2h1a1 1 0 011 1zM8 16v-1h4v1a2 2 0 11-4 0zM12 14c.015-.34.208-.646.477-.859a4 4 0 10-4.954 0c.27.213.462.519.477.859h4z"/>
            </svg>
          </div>
          <h3 class="font-medium text-foreground mb-2">Ambient Lighting</h3>
          <p class="text-sm text-muted-foreground">Professional lighting to create the perfect atmosphere</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="font-medium text-foreground mb-2">Setup & Cleanup</h3>
          <p class="text-sm text-muted-foreground">Professional setup before and complete cleanup after</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 20 20">
              <path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z"/>
              <path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z"/>
            </svg>
          </div>
          <h3 class="font-medium text-foreground mb-2">Event Coordination</h3>
          <p class="text-sm text-muted-foreground">Day-of coordination to ensure everything runs smoothly</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Detailed Pricing Section -->
  <section class="py-20 px-6 bg-card/30">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <Badge className="mb-4 bg-primary/10 text-primary border-primary/20">Additional Services</Badge>
        <h2 class="text-3xl font-display text-foreground mb-4">Catering & Bar Service</h2>
        <p class="text-lg text-muted-foreground">
          Optional catering and bar services to complete your event experience
        </p>
      </div>

      <!-- Catering Section -->
      <div class="grid lg:grid-cols-2 gap-12 mb-16">
        <!-- All-American Catering -->
        <div class="bg-card rounded-xl p-8">
          <h3 class="text-2xl font-display text-foreground mb-4">{cateringPackages.american.name}</h3>
          <p class="text-muted-foreground mb-6">{cateringPackages.american.description}</p>
          
          <div class="space-y-4">
            {cateringPackages.american.packages.map(pkg => (
              <div class="p-4 bg-primary/5 rounded-lg">
                <div class="flex justify-between items-start mb-2">
                  <h4 class="font-medium text-foreground">{pkg.name}</h4>
                  <div class="text-right">
                    {pkg.buffet && <div class="text-primary font-bold">${pkg.buffet}/guest</div>}
                    {pkg.plated && <div class="text-sm text-muted-foreground">${pkg.plated}/guest plated</div>}
                  </div>
                </div>
                <p class="text-sm text-muted-foreground">{pkg.description}</p>
              </div>
            ))}
          </div>
        </div>

        <!-- Latin Fusion Catering -->
        <div class="bg-card rounded-xl p-8">
          <h3 class="text-2xl font-display text-foreground mb-4">{cateringPackages.latinFusion.name}</h3>
          <p class="text-muted-foreground mb-6">{cateringPackages.latinFusion.description}</p>
          
          <div class="space-y-4">
            {cateringPackages.latinFusion.packages.map(pkg => (
              <div class="p-4 bg-primary/5 rounded-lg">
                <div class="flex justify-between items-start mb-2">
                  <h4 class="font-medium text-foreground">{pkg.name}</h4>
                  <div class="text-right">
                    {pkg.buffet && <div class="text-primary font-bold">${pkg.buffet}/guest</div>}
                    {pkg.plated && <div class="text-sm text-muted-foreground">${pkg.plated}/guest plated</div>}
                  </div>
                </div>
                <p class="text-sm text-muted-foreground">{pkg.description}</p>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Bar Service -->
      <div class="bg-card rounded-xl p-8">
        <h3 class="text-2xl font-display text-foreground mb-4">Bar Service</h3>
        <p class="text-muted-foreground mb-6">
          Professional bartender included with all bar packages. $300 setup fee covers bartender service for events with 20+ guests.
        </p>
        
        <div class="grid md:grid-cols-2 gap-6">
          {barPackages.map(pkg => (
            <div class="p-4 bg-primary/5 rounded-lg">
              <div class="flex justify-between items-start mb-2">
                <h4 class="font-medium text-foreground">{pkg.name}</h4>
                {pkg.beerWine && (
                  <div class="text-right">
                    <div class="text-primary font-bold">${pkg.beerWine}/guest</div>
                    <div class="text-sm text-muted-foreground">Beer & Wine</div>
                  </div>
                )}
                {pkg.fullBar && (
                  <div class="text-right">
                    <div class="text-primary font-bold">${pkg.fullBar}/guest</div>
                    <div class="text-sm text-muted-foreground">Full Bar</div>
                  </div>
                )}
              </div>
              <p class="text-sm text-muted-foreground">{pkg.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 px-6 bg-gradient-card">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-4xl font-display text-foreground mb-6">Ready to Plan Your Event?</h2>
      <p class="text-xl mb-8 text-foreground/90 max-w-3xl mx-auto">
        Choose your package and let us handle the details. Our transparent pricing means no surprises, 
        just a perfect event tailored to your vision and budget.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="btn-primary-lg">
          Get Your Custom Quote
        </a>
        <a href="/contact#tour" class="btn-outline-lg">
          Schedule a Venue Tour
        </a>
      </div>
    </div>
  </section>
</Layout>