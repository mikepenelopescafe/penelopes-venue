---
export const prerender = true;

import Layout from '@/layouts/Layout.astro';
import { Badge } from '@/components/ui/badge';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { venuePackages, calculateVenuePackagePrice, venueRules } from '@/data/pricing';
import crossBacksImage from '@/assets/images/penelopes-cross-backs.jpeg';

const seo = {
  title: "Venue Pricing & Details | Penelope’s Venue",
  description: "Simple, transparent venue pricing with flexible hour blocks and included amenities. Clean, modern space in the Denver metro.",
  keywords: "venue pricing, event venue Denver, Westminster venue"
};
---

<Layout title={seo.title} description={seo.description} keywords={seo.keywords}>
  <section class="relative py-24 px-6 overflow-hidden" style={`background-image: url('${crossBacksImage.src}'); background-size: cover; background-position: center;`}>
    <div class="absolute inset-0 bg-gradient-to-r from-black/80 via-black/60 to-black/40"></div>
    <div class="absolute inset-0 bg-pattern-dots opacity-10"></div>
    <div class="relative max-w-6xl mx-auto text-center min-h-[420px] flex items-center">
      <div class="w-full">
        <Badge className="mb-6 bg-primary/10 text-primary border-primary/20 text-lg px-4 py-2">Venue</Badge>
        <h1 class="text-5xl font-display text-white mb-6 leading-tight">
          Clean, Modern Venue <span class="text-primary">with Simple Pricing</span>
        </h1>
        <p class="text-xl text-white/90 max-w-4xl mx-auto">Flexible blocks, clear minimums, no stress. Your vibe, your rules.</p>
      </div>
    </div>
  </section>

  <section class="py-20 px-6 bg-white">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-5xl mb-4" style="font-family: 'Brush Script MT', cursive; color: #000; font-weight: normal;">
          Simple day-based pricing
        </h2>
        <p class="text-lg text-gray-600 mb-8">8 & 4 hour packages with clear rates and simple rules</p>
      </div>

      <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
        <div class="p-8">
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="border-b-2 border-gray-200">
                  <th class="text-left py-4 pr-8 font-semibold text-lg">Packages</th>
                  <th class="text-left py-4 pr-8 font-semibold text-lg">Days</th>
                  <th class="text-right py-4 pr-8 font-semibold text-lg">4-hour</th>
                  <th class="text-right py-4 font-semibold text-lg">8-hour</th>
                </tr>
              </thead>
              <tbody>
                {([
                  'friday',
                  'saturday', 
                  'sunday',
                  'monThu',
                  'memorialMonThu',
                  'nonProfitMonThu'
                ] as const).map((id) => {
                  const pkg = venuePackages[id];
                  const basePrice4 = pkg.price4Hours;
                  const basePrice8 = pkg.price8Hours;
                  const discountedPrice4 = calculateVenuePackagePrice({ packageId: id, durationHours: 4, date: new Date('2025-01-15') }); // Use Jan date for off-peak
                  const discountedPrice8 = calculateVenuePackagePrice({ packageId: id, durationHours: 8, date: new Date('2025-01-15') });
                  const hasDiscount = pkg.discountEligible;
                  
                  return (
                    <tr class="border-b border-gray-100">
                      <td class="py-4 pr-8">
                        <div class="font-semibold text-base">
                          {pkg.label}
                          {pkg.notes && <span class="text-gray-500">*</span>}
                        </div>
                      </td>
                      <td class="py-4 pr-8 text-base">{pkg.days}</td>
                      <td class="py-4 pr-8 text-right">
                        {basePrice4 > 0 ? (
                          <div>
                            {hasDiscount ? (
                              <div>
                                <div class="text-red-500 line-through text-base">${basePrice4.toLocaleString()}</div>
                                <div class="font-semibold text-lg">${discountedPrice4.toLocaleString()}</div>
                              </div>
                            ) : (
                              <div class="font-semibold text-lg">${basePrice4.toLocaleString()}</div>
                            )}
                          </div>
                        ) : '—'}
                      </td>
                      <td class="py-4 text-right">
                        {basePrice8 > 0 ? (
                          <div>
                            {hasDiscount ? (
                              <div>
                                <div class="text-red-500 line-through text-base">${basePrice8.toLocaleString()}</div>
                                <div class="font-semibold text-lg">${discountedPrice8.toLocaleString()}</div>
                              </div>
                            ) : (
                              <div class="font-semibold text-lg">${basePrice8.toLocaleString()}</div>
                            )}
                          </div>
                        ) : '—'}
                      </td>
                    </tr>
                  );
                })}
              </tbody>
            </table>
          </div>

          <div class="mt-6 text-sm text-gray-600 text-center">
            Grand Opening discounts auto-apply September 2025- March 2026 where eligible. holiday surcharges may apply. * Not subject to discount.
          </div>
          
          <div class="mt-8">
            <div class="bg-red-500 text-white text-center py-4 px-6 rounded text-xl font-bold tracking-wide">
              20% OFF FRIDAY & SATURDAY, AND 30% MONDAY-THURSDAY
            </div>
          </div>

          <div class="mt-6 flex flex-col sm:flex-row gap-3 justify-center">
            <a href="/contact" class="btn-primary-lg">Start Your Quote</a>
            <a href="/contact#tour" class="btn-outline-lg">Schedule a Tour</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-20 px-6 bg-card/30">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-10">
        <Badge className="mb-4 bg-primary/10 text-primary border-primary/20">Special Dates & Inclusions</Badge>
        <h2 class="text-2xl font-display">Holiday Surcharges & What's Included</h2>
        <p class="text-sm text-muted-foreground max-w-2xl mx-auto">Certain dates may include a holiday surcharge. All packages include essential amenities.</p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <Card className="bg-card border-primary/20">
          <CardHeader>
            <CardTitle className="text-lg">Holiday Surcharge</CardTitle>
            <CardDescription>Applied to select dates</CardDescription>
          </CardHeader>
          <CardContent className="text-sm space-y-2">
            {(venueRules.holidaySurcharge.appliesTo as readonly string[]).map(item => (
              <div>{item}</div>
            ))}
            <div class="text-muted-foreground">Surcharge may apply; ask for details.</div>
          </CardContent>
        </Card>

        <Card className="bg-card border-primary/20">
          <CardHeader>
            <CardTitle className="text-lg">What's Included</CardTitle>
            <CardDescription>Always part of your package</CardDescription>
          </CardHeader>
          <CardContent className="grid grid-cols-2 gap-3 text-sm">
            <div>Tables & Chairs</div>
            <div>Ambient Lighting</div>
            <div>Setup & Cleanup</div>
            <div>Day‑of Coordination</div>
          </CardContent>
        </Card>
      </div>
    </div>
  </section>

  <section class="py-16 px-6 bg-gradient-card">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl font-display mb-4">Ready to see the space?</h2>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact#tour" class="btn-primary-lg">Schedule a Tour</a>
        <a href="/catering" class="btn-outline-lg">Explore Catering</a>
      </div>
    </div>
  </section>
</Layout>


