---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';

export const prerender = true;

export async function getStaticPaths() {
  const locations = await getCollection('locations');
  return locations.map(location => ({
    params: { city: location.data.citySlug },
    props: { location }
  }));
}

const { location } = Astro.props;
const { Content } = await location.render();

// Get testimonials for this location
const testimonials = location.data.localTestimonials 
  ? await getCollection('testimonials', (testimonial) => 
      location.data.localTestimonials.includes(testimonial.slug))
  : [];

// Group services by type
const servicesByType = location.data.availableServices.reduce((acc, service) => {
  const type = service.serviceType;
  if (!acc[type]) {
    acc[type] = [];
  }
  acc[type].push(service);
  return acc;
}, {});

// Service type labels
const serviceTypeLabels = {
  'micro-wedding': 'Micro Weddings',
  'elopement': 'Elopements', 
  'corporate-event': 'Corporate Events',
  'private-party': 'Private Parties',
  'bridal-shower': 'Bridal Showers',
  'baby-shower': 'Baby Showers',
  'wedding': 'Full Weddings',
  'reception': 'Receptions',
  'anniversary': 'Anniversaries',
  'birthday': 'Birthdays',
  'graduation': 'Graduations',
  'retirement': 'Retirement Parties'
};

// SEO metadata
const seo = {
  title: location.data.title,
  description: location.data.description,
  keywords: location.data.keywords?.join(', '),
  canonical: location.data.canonical || Astro.url.href,
};

// Structured data for local business
const businessSchema = {
  "@context": "https://schema.org",
  "@type": "EventVenue",
  "name": location.data.businessSchema.name,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": location.data.businessSchema.address.street,
    "addressLocality": location.data.businessSchema.address.city,
    "addressRegion": location.data.businessSchema.address.state,
    "postalCode": location.data.businessSchema.address.zipCode,
  },
  "telephone": location.data.businessSchema.phone,
  "email": location.data.businessSchema.email,
  "url": location.data.businessSchema.website || Astro.url.href,
  "geo": location.data.coordinates && {
    "@type": "GeoCoordinates",
    "latitude": location.data.coordinates.lat,
    "longitude": location.data.coordinates.lng,
  },
  "servesCuisine": "Event Catering",
  "priceRange": "$$-$$$",
};
---

<Layout title={seo.title} description={seo.description} keywords={seo.keywords} canonical={seo.canonical}>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(businessSchema)}></script>

  <!-- Hero Section -->
  <section class="relative py-24 px-6 overflow-hidden" transition:name={`location-${location.data.citySlug}-hero`}>
    <!-- Dark Black Gradient Background -->
    <div class="absolute inset-0 bg-gradient-to-r from-black/80 via-black/60 to-black/40"></div>
    <!-- Subtle Pattern Overlay for Texture -->
    <div class="absolute inset-0 bg-pattern-dots opacity-10"></div>

    <div class="relative max-w-6xl mx-auto min-h-[500px] flex items-center">
      <div class="w-full">
        <!-- Breadcrumbs -->
        <div class="flex items-center gap-2 text-sm text-white/80 mb-6">
          <a href="/" class="hover:text-white transition-colors">Home</a>
          <span>/</span>
          <a href="/locations" class="hover:text-white transition-colors">Locations</a>
          <span>/</span>
          <span class="text-primary">{location.data.city}</span>
        </div>

        <Badge className="mb-6 bg-primary/10 text-primary border-primary/20 text-lg px-4 py-2">
          {location.data.region}
        </Badge>

        <h1 class="text-5xl font-display text-white mb-6 leading-tight">
          Event Venue in <span class="text-primary">{location.data.city}, {location.data.state}</span>
        </h1>

        <p class="text-xl text-white/90 max-w-4xl leading-relaxed mb-8">
          Looking for the perfect event venue in {location.data.city}? Our beautiful space offers 
          everything you need for weddings, corporate events, and private celebrations with 
          professional coordination and flexible packages.
        </p>

        <div class="flex flex-col sm:flex-row gap-4">
          <a href="#services" class="btn-primary-lg">
            View Services
          </a>
          <a href="/contact#book" class="btn-outline-lg">
            Book Your Event
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Location Info & Services -->
  <section id="services" class="py-20 px-6 bg-background">
    <div class="max-w-7xl mx-auto">
      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Main Content -->
        <div class="lg:col-span-2">
          <!-- About This Location -->
          <div class="mb-12">
            <h2 class="text-3xl font-display text-foreground mb-6">
              Your {location.data.city} Event Venue
            </h2>
            <div class="prose prose-lg max-w-none">
              <Content />
            </div>
          </div>

          <!-- Available Services -->
          <div class="mb-12">
            <h2 class="text-3xl font-display text-foreground mb-8">Available Services</h2>
            <div class="grid md:grid-cols-2 gap-6">
              {Object.entries(servicesByType).map(([type, typeServices]) => (
                <Card className="bg-card border-primary/20 hover-lift transition-all duration-300">
                  <CardHeader>
                    <CardTitle className="text-xl font-display text-foreground">
                      {serviceTypeLabels[type] || type}
                    </CardTitle>
                  </CardHeader>
                  <CardContent className="space-y-4">
                    {typeServices.map(service => (
                      <div class="flex justify-between items-center p-3 bg-primary/5 rounded-lg">
                        <div>
                          <div class="font-medium text-foreground text-sm">
                            {service.packageName}
                          </div>
                        </div>
                        <div class="text-right">
                          <div class="text-lg font-bold text-primary">
                            ${service.price.toLocaleString()}
                          </div>
                          <a
                            href={`/services/${service.slug}`}
                            class="text-xs text-primary hover:underline"
                          >
                            View Details →
                          </a>
                        </div>
                      </div>
                    ))}
                  </CardContent>
                </Card>
              ))}
            </div>
          </div>

          <!-- Local Testimonials -->
          {testimonials.length > 0 && (
            <div class="mb-12">
              <h2 class="text-3xl font-display text-foreground mb-8">
                {location.data.city} Success Stories
              </h2>
              <div class="space-y-6">
                {testimonials.map(testimonial => (
                  <Card className="bg-card border-primary/20">
                    <CardContent className="p-6">
                      <div class="flex items-start justify-between mb-4">
                        <div>
                          <div class="font-medium text-foreground">
                            {testimonial.data.clientName}
                          </div>
                          <div class="text-sm text-muted-foreground">
                            {testimonial.data.eventType} • {testimonial.data.eventDate.toLocaleDateString()}
                          </div>
                        </div>
                        <div class="flex text-yellow-400">
                          {Array.from({length: testimonial.data.rating}, (_, i) => (
                            <span key={i}>⭐</span>
                          ))}
                        </div>
                      </div>
                      <blockquote class="text-foreground italic">
                        "{testimonial.data.highlight}"
                      </blockquote>
                    </CardContent>
                  </Card>
                ))}
              </div>
            </div>
          )}
        </div>

        <!-- Sidebar -->
        <aside class="lg:sticky lg:top-8 h-fit space-y-6">
          <!-- Quick Info -->
          <Card className="bg-card border-primary/20">
            <CardHeader>
              <CardTitle className="text-xl font-display text-foreground">
                Location Information
              </CardTitle>
            </CardHeader>
            <CardContent className="space-y-4">
              <div>
                <div class="text-sm text-muted-foreground mb-1">City</div>
                <div class="font-medium text-foreground">
                  {location.data.city}, {location.data.state}
                </div>
              </div>
              
              <div>
                <div class="text-sm text-muted-foreground mb-1">Region</div>
                <div class="font-medium text-foreground">{location.data.region}</div>
              </div>

              <div>
                <div class="text-sm text-muted-foreground mb-1">Available Services</div>
                <div class="font-medium text-foreground">
                  {location.data.availableServices.length} service types
                </div>
              </div>

              {location.data.demographics?.population && (
                <div>
                  <div class="text-sm text-muted-foreground mb-1">Population</div>
                  <div class="font-medium text-foreground">
                    {location.data.demographics.population.toLocaleString()}
                  </div>
                </div>
              )}
            </CardContent>
          </Card>

          <!-- Transportation -->
          {location.data.localInfo?.transportation && (
            <Card className="bg-card border-primary/20">
              <CardHeader>
                <CardTitle className="text-xl font-display text-foreground">
                  Getting Here
                </CardTitle>
              </CardHeader>
              <CardContent className="space-y-3">
                {location.data.localInfo.transportation.fromDenver && (
                  <div>
                    <div class="text-sm text-muted-foreground mb-1">From Denver</div>
                    <div class="text-sm text-foreground">
                      {location.data.localInfo.transportation.fromDenver}
                    </div>
                  </div>
                )}

                {location.data.localInfo.transportation.fromBoulder && (
                  <div>
                    <div class="text-sm text-muted-foreground mb-1">From Boulder</div>
                    <div class="text-sm text-foreground">
                      {location.data.localInfo.transportation.fromBoulder}
                    </div>
                  </div>
                )}

                {location.data.localInfo.transportation.parking && (
                  <div>
                    <div class="text-sm text-muted-foreground mb-1">Parking</div>
                    <div class="text-sm text-foreground">
                      {location.data.localInfo.transportation.parking}
                    </div>
                  </div>
                )}
              </CardContent>
            </Card>
          )}

          <!-- Nearby Attractions -->
          {location.data.localInfo?.nearbyAttractions && location.data.localInfo.nearbyAttractions.length > 0 && (
            <Card className="bg-card border-primary/20">
              <CardHeader>
                <CardTitle className="text-xl font-display text-foreground">
                  Nearby Attractions
                </CardTitle>
              </CardHeader>
              <CardContent>
                <ul class="space-y-2">
                  {location.data.localInfo.nearbyAttractions.map(attraction => (
                    <li class="text-sm text-foreground flex items-start gap-2">
                      <span class="text-primary">•</span>
                      {attraction}
                    </li>
                  ))}
                </ul>
              </CardContent>
            </Card>
          )}

          <!-- Call to Action -->
          <Card className="bg-gradient-card border-primary/20">
            <CardContent className="p-6 space-y-4 text-center">
              <h3 class="text-lg font-display text-foreground">
                Ready to Book?
              </h3>
              <p class="text-sm text-foreground/80">
                Contact us to check availability and get started planning your perfect event.
              </p>
              <div class="space-y-3">
                <a
                  href="/contact#book"
                  class="block w-full bg-primary hover:bg-primary/90 text-primary-foreground px-4 py-3 rounded-md text-sm font-medium transition-colors"
                >
                  Book Your Event
                </a>
                <a
                  href="/pricing"
                  class="block w-full border border-primary/20 hover:border-primary/40 text-foreground text-center px-4 py-3 rounded-md text-sm font-medium transition-colors"
                >
                  View Pricing
                </a>
              </div>
            </CardContent>
          </Card>
        </aside>
      </div>
    </div>
  </section>

  <!-- Explore Other Locations -->
  <section class="py-16 px-6 bg-card/30">
    <div class="max-w-6xl mx-auto text-center">
      <h2 class="text-3xl font-display text-foreground mb-6">
        Explore Other Locations
      </h2>
      <p class="text-lg text-muted-foreground mb-8">
        We also serve other cities throughout the Denver metro area.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/locations" class="btn-primary">
          View All Locations
        </a>
        <a href="/services" class="btn-outline">
          Browse Services
        </a>
      </div>
    </div>
  </section>
</Layout>