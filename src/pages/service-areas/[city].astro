---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { getVenuePricing, formatPriceRange } from '@/lib/pricing-utils';
import { cateringPackages } from '@/data/pricing';
import crossBacksImage from '@/assets/images/penelopes-cross-backs.jpeg';

export const prerender = true;

export async function getStaticPaths() {
  const serviceAreas = await getCollection('service-areas');
  const filtered = serviceAreas.filter(area => area.data.citySlug !== 'westminster');
  return filtered.map(location => ({
    params: { city: location.data.citySlug },
    props: { location }
  }));
}

const { location } = Astro.props;
const { Content } = await location.render();

// Services are now handled through venue and catering pages
// No need to fetch individual services

// Get testimonials for this location with explicit narrowing
let testimonials: CollectionEntry<'testimonials'>[] = [];
const testimonialIds = location.data.localTestimonials;
if (Array.isArray(testimonialIds) && testimonialIds.length > 0) {
  testimonials = await getCollection('testimonials', (testimonial) => testimonialIds.includes(testimonial.slug));
}

// Services are now managed generically - no need for grouping logic

// SEO metadata
const seo = {
  title: location.data.title,
  description: location.data.description,
  keywords: location.data.keywords?.join(', '),
  canonical: location.data.canonical || Astro.url.href,
};

// Structured data for local business
const businessSchema = {
  "@context": "https://schema.org",
  "@type": "EventVenue",
  "name": location.data.businessSchema.name,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": location.data.businessSchema.address.street,
    "addressLocality": location.data.businessSchema.address.city,
    "addressRegion": location.data.businessSchema.address.state,
    "postalCode": location.data.businessSchema.address.zipCode,
  },
  "telephone": location.data.businessSchema.phone,
  "email": location.data.businessSchema.email,
  "url": location.data.businessSchema.website || Astro.url.href,
  "geo": location.data.coordinates && {
    "@type": "GeoCoordinates",
    "latitude": location.data.coordinates.lat,
    "longitude": location.data.coordinates.lng,
  },
  "servesCuisine": "Event Catering",
  "priceRange": "$$-$$$",
};
---

<Layout title={seo.title} description={seo.description} keywords={seo.keywords} canonical={seo.canonical}>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(businessSchema)}></script>
  <script type="application/ld+json" set:html={JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'BreadcrumbList',
    itemListElement: [
      { '@type': 'ListItem', position: 1, name: 'Home', item: '/' },
      { '@type': 'ListItem', position: 2, name: 'Service Areas', item: '/service-areas' },
      { '@type': 'ListItem', position: 3, name: location.data.city, item: `/service-areas/${location.data.citySlug}` },
    ],
  })}></script>
  {location.data.faqs && (
    <script type="application/ld+json" set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'FAQPage',
      mainEntity: location.data.faqs.map((f: { q: string; a: string }) => ({
        '@type': 'Question',
        name: f.q,
        acceptedAnswer: { '@type': 'Answer', text: f.a },
      })),
    })}></script>
  )}

  <!-- Hero Section -->
  <section class="relative py-24 px-6 bg-gradient-to-br from-background via-background to-primary/5" transition:name={`location-${location.data.citySlug}-hero`}>
    <div class="max-w-7xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
        <!-- Text Content -->
        <div class="order-2 lg:order-1">
          <!-- Breadcrumbs -->
          <div class="flex items-center gap-2 text-sm text-muted-foreground mb-6">
            <a href="/" class="hover:text-foreground transition-colors">Home</a>
            <span>/</span>
            <a href="/service-areas" class="hover:text-foreground transition-colors">Service Areas</a>
            <span>/</span>
            <span class="text-primary">{location.data.city}</span>
          </div>

          <Badge className="mb-6 bg-primary/10 text-primary border-primary/20 text-lg px-4 py-2">
            {location.data.region}
          </Badge>

          <h1 class="text-4xl lg:text-5xl font-display text-foreground mb-6 leading-tight">
            Spanish-Inspired Events Near <span class="text-primary">{location.data.city}, {location.data.state}</span>
          </h1>

          <p class="text-lg lg:text-xl text-muted-foreground max-w-2xl leading-relaxed mb-8">
            Planning in {location.data.city}? Our Westminster venue brings moody Spanish charm and modern intimacy to your celebration. Authentic atmosphere, effortless execution for 50-100 guests.
          </p>

          <div class="flex flex-col sm:flex-row gap-4">
            <a href="#available-services" class="btn-primary-lg">
              See the Space
            </a>
            <a href="/contact#book" class="btn-outline-lg">
              Let's Connect
            </a>
          </div>
        </div>

        <!-- Hero Image -->
        <div class="order-1 lg:order-2 relative">
          <div class="relative aspect-[4/3] lg:aspect-[3/4] rounded-2xl overflow-hidden shadow-2xl">
            {location.data.heroImage ? (
              <>
                <img
                  src={location.data.heroImage.src}
                  alt={location.data.heroImage.alt}
                  class="w-full h-full object-cover"
                  loading="eager"
                />

                <!-- Overlay gradient for depth -->
                <div class="absolute inset-0 bg-gradient-to-t from-primary/10 via-transparent to-transparent"></div>

                <!-- Image Attribution -->
                {location.data.heroImage.attribution && (
                  <div class="absolute bottom-4 left-4 bg-black/70 backdrop-blur-sm rounded-lg px-3 py-2 text-xs">
                    {location.data.heroImage.sourceUrl ? (
                      <a
                        href={location.data.heroImage.sourceUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-white/90 hover:text-white transition-colors underline decoration-white/30 hover:decoration-white/60"
                      >
                        Image: {location.data.heroImage.attribution}
                      </a>
                    ) : (
                      <span class="text-white/90">
                        Image: {location.data.heroImage.attribution}
                      </span>
                    )}
                  </div>
                )}
              </>
            ) : (
              /* Fallback placeholder for cities without hero images */
              <>
                <div class="w-full h-full bg-gradient-to-br from-primary/10 via-primary/5 to-primary/20 flex items-center justify-center relative">
                  <!-- Background pattern for visual interest -->
                  <div class="absolute inset-0 bg-pattern-dots opacity-5"></div>
                  <div class="absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent"></div>

                  <!-- Placeholder content -->
                  <div class="relative z-10 text-center p-8">
                    <div class="text-6xl mb-4">🎉</div>
                    <div class="text-primary font-medium text-lg">{location.data.city} Events</div>
                    <div class="text-muted-foreground text-sm mt-2">Coming soon</div>
                  </div>
                </div>

                <!-- Overlay gradient for depth -->
                <div class="absolute inset-0 bg-gradient-to-t from-primary/10 via-transparent to-transparent"></div>
              </>
            )}
          </div>

          <!-- Decorative elements -->
          <div class="absolute -bottom-4 -right-4 w-24 h-24 bg-primary/10 rounded-full -z-10"></div>
          <div class="absolute -top-4 -left-4 w-16 h-16 bg-primary/5 rounded-full -z-10"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Location Info & Services -->
  <section id="services" class="py-20 px-6 bg-background scroll-mt-28 md:scroll-mt-32 lg:scroll-mt-40">
    <div class="max-w-7xl mx-auto">
      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Main Content -->
        <div class="lg:col-span-2 service-content">
          <!-- About This Location -->
          <div class="mb-12">
            <div class="prose prose-lg max-w-none">
              <Content />
            </div>
          </div>

          <!-- Available Services -->
          <div id="available-services" class="mb-12">
            <h2 class="text-3xl font-display text-foreground mb-4">Spanish-Inspired. Intimate. All Yours.</h2>
            <p class="text-lg text-muted-foreground mb-6">
              Full-service Spanish charm for {location.data.city} celebrations. Moody architecture meets modern execution.
            </p>
            <div class="grid md:grid-cols-2 gap-6">
              <Card className="bg-card border-primary/20 hover-lift transition-all duration-300">
                <CardHeader>
                  <CardTitle className="text-xl font-display text-foreground">
                    Spanish-Inspired Venue
                  </CardTitle>
                  <CardDescription className="text-sm text-muted-foreground">
                    50-100 guests
                  </CardDescription>
                </CardHeader>
                <CardContent className="space-y-4">
                  <p class="text-sm text-muted-foreground">
                    Moody Spanish architecture with warm lighting and authentic details. Intimate scale, professional execution.
                  </p>
                  <div class="flex justify-between items-center pt-4 border-t border-primary/10">
                    <div class="text-lg font-bold text-primary">
                      {getVenuePricing('monThu').formatted}
                    </div>
                    <a
                      href="/venue"
                      class="text-sm text-primary hover:underline"
                    >
                      See the Space →
                    </a>
                  </div>
                </CardContent>
              </Card>
              <Card className="bg-card border-primary/20 hover-lift transition-all duration-300">
                <CardHeader>
                  <CardTitle className="text-xl font-display text-foreground">
                    Latin-Inspired Catering & Bar
                  </CardTitle>
                  <CardDescription className="text-sm text-muted-foreground">
                    18+ guests
                  </CardDescription>
                </CardHeader>
                <CardContent className="space-y-4">
                  <p class="text-sm text-muted-foreground">
                    Curated Latin-American flavors with modern presentation. Full bar service with professional staff.
                  </p>
                  <div class="flex justify-between items-center pt-4 border-t border-primary/10">
                    <div class="text-lg font-bold text-primary">
                      {formatPriceRange(18, 33)}/guest
                    </div>
                    <a
                      href="/catering"
                      class="text-sm text-primary hover:underline"
                    >
                      Explore Menus →
                    </a>
                  </div>
                </CardContent>
              </Card>
            </div>
          </div>

          <!-- Local Testimonials -->
          {testimonials.length > 0 && (
            <div class="mb-12">
              <h2 class="text-3xl font-display text-foreground mb-6">
                Real Moments from {location.data.city} Area
              </h2>
              <div class="space-y-6">
                {testimonials.map(testimonial => (
                  <Card className="bg-card border-primary/20">
                    <CardContent className="p-6">
                      <div class="flex items-start justify-between mb-4">
                        <div>
                          <div class="font-medium text-foreground">
                            {testimonial.data.clientName}
                          </div>
                          <div class="text-sm text-muted-foreground">
                            {testimonial.data.eventType} • {testimonial.data.eventDate.toLocaleDateString()}
                          </div>
                        </div>
                        <div class="flex text-yellow-400">
                          {Array.from({length: testimonial.data.rating}).map(() => (
                            <span>⭐</span>
                          ))}
                        </div>
                      </div>
                      <blockquote class="text-foreground italic">
                        "{testimonial.data.highlight}"
                      </blockquote>
                    </CardContent>
                  </Card>
                ))}
              </div>
            </div>
          )}
        </div>

        <!-- Sidebar -->
        <aside class="lg:sticky lg:top-8 h-fit space-y-6">
          <!-- Quick Info -->
          <Card className="bg-card border-primary/20">
            <CardHeader>
              <CardTitle className="text-xl font-display text-foreground">
                Your Area, Our Space
              </CardTitle>
            </CardHeader>
            <CardContent className="space-y-4">
              <div>
                <div class="text-sm sidebar-muted-label mb-1">City</div>
                <div class="font-medium text-foreground">
                  {location.data.city}, {location.data.state}
                </div>
              </div>
              
              <div>
                <div class="text-sm sidebar-muted-label mb-1">Region</div>
                <div class="font-medium text-foreground">{location.data.region}</div>
              </div>

              <div>
                <div class="text-sm sidebar-muted-label mb-1">Our Approach</div>
                <div class="font-medium text-foreground">
                  Spanish-inspired intimacy meets modern execution
                </div>
              </div>

              {location.data.demographics?.population && (
                <div>
                  <div class="text-sm sidebar-muted-label mb-1">Population</div>
                  <div class="font-medium text-foreground">
                    {location.data.demographics.population.toLocaleString()}
                  </div>
                </div>
              )}
            </CardContent>
          </Card>

          <!-- Transportation -->
          {location.data.localInfo?.transportation && (
            <Card className="bg-card border-primary/20">
              <CardHeader>
                <CardTitle className="text-xl font-display text-foreground">
                  Getting to Our Westminster Venue
                </CardTitle>
              </CardHeader>
              <CardContent className="space-y-3">
                {location.data.localInfo.transportation.fromDenver && (
                  <div>
                    <div class="text-sm sidebar-muted-label mb-1">From Denver</div>
                    <div class="text-sm text-foreground">
                      {location.data.localInfo.transportation.fromDenver}
                    </div>
                  </div>
                )}

                {location.data.localInfo.transportation.fromBoulder && (
                  <div>
                    <div class="text-sm sidebar-muted-label mb-1">From Boulder</div>
                    <div class="text-sm text-foreground">
                      {location.data.localInfo.transportation.fromBoulder}
                    </div>
                  </div>
                )}

                {location.data.localInfo.transportation.parking && (
                  <div>
                    <div class="text-sm sidebar-muted-label mb-1">Parking</div>
                    <div class="text-sm text-foreground">
                      {location.data.localInfo.transportation.parking}
                    </div>
                  </div>
                )}
              </CardContent>
            </Card>
          )}

          <!-- Nearby Attractions -->
          {location.data.localInfo?.nearbyAttractions && location.data.localInfo.nearbyAttractions.length > 0 && (
            <Card className="bg-card border-primary/20">
              <CardHeader>
                <CardTitle className="text-xl font-display text-foreground">
                  Nearby Attractions
                </CardTitle>
              </CardHeader>
              <CardContent>
                <ul class="space-y-2">
                  {location.data.localInfo.nearbyAttractions.map(attraction => (
                    <li class="text-sm text-foreground flex items-start gap-2">
                      <span class="text-primary">•</span>
                      {attraction}
                    </li>
                  ))}
                </ul>
              </CardContent>
            </Card>
          )}

          <!-- Call to Action -->
          <Card className="bg-gradient-card border-primary/20">
            <CardContent className="p-6 space-y-4 text-center">
              <h3 class="text-lg font-display text-foreground">
                Ready to Make It Real?
              </h3>
              <p class="text-sm text-foreground/80">
                Your vision deserves authentic Spanish charm and modern execution. Let's connect.
              </p>
              <div class="space-y-3">
                <a
                  href="/contact#book"
                  class="block w-full bg-primary hover:bg-primary/90 text-primary-foreground px-4 py-3 rounded-md text-sm font-medium transition-colors"
                >
                  Let's Connect
                </a>
                <a
                  href="/venue"
                  class="block w-full border border-primary/20 hover:border-primary/40 text-foreground text-center px-4 py-3 rounded-md text-sm font-medium transition-colors"
                >
                  See the Space
                </a>
              </div>
            </CardContent>
          </Card>
        </aside>
      </div>
    </div>
  </section>

  <!-- Explore Other Service Areas -->
  <section class="py-16 px-6 bg-card/30">
    <div class="max-w-6xl mx-auto text-center">
      <h2 class="text-3xl font-display text-foreground mb-6">
        Spanish Charm Throughout the Metro
      </h2>
      <p class="text-lg text-muted-foreground mb-8">
        Moody intimacy and authentic celebrations for communities across the Denver area.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/service-areas" class="btn-primary">
          Explore All Areas
        </a>
        <a href="/venue" class="btn-outline">
          See the Space
        </a>
      </div>
    </div>
  </section>
</Layout>