---
import Layout from '@/layouts/Layout.astro';
import { ContentUtils } from '@/lib/content-utils';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';

export const prerender = true;

// Get service areas using ContentUtils with filtering and sorting
const allServiceAreas = await ContentUtils.getCachedCollection('service-areas');

// Filter out Westminster and sort by priority
const sortedServiceAreas = allServiceAreas
  .filter(area => area.data.citySlug !== 'westminster')
  .sort((a, b) => {
    const priorityOrder = { primary: 0, secondary: 1, tertiary: 2 };
    return priorityOrder[a.data.priority] - priorityOrder[b.data.priority];
  });

const seo = {
  title: "Service Areas - Spanish-Inspired Venue Serving Denver Metro | Penelope's",
  description: "Penelope's Spanish-inspired Westminster venue serves Denver metro with intimate, moody spaces for 50-100 guests. Authentic atmosphere, modern execution across Arvada, Lakewood, Thornton & more.",
  keywords: "Spanish-inspired venue Denver metro, Westminster wedding venue, intimate event space Denver, moody venue Colorado, boutique wedding venue, 50-100 guest venue, Denver metro event services"
};
---

<Layout title={seo.title} description={seo.description} keywords={seo.keywords}>
  <script type="application/ld+json">
    {JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Home", "item": "/" },
        { "@type": "ListItem", "position": 2, "name": "Service Areas", "item": "/service-areas" }
      ]
    })}
  </script>
  <!-- Hero Section -->
  <section class="relative py-24 px-6 overflow-hidden" transition:name="service-areas-hero">
    <!-- Dark Black Gradient Background -->
    <div class="absolute inset-0 bg-gradient-to-r from-black/80 via-black/60 to-black/40"></div>
    <!-- Subtle Pattern Overlay for Texture -->
    <div class="absolute inset-0 bg-pattern-dots opacity-10"></div>

    <!-- Content -->
    <div class="relative max-w-6xl mx-auto text-center min-h-[500px] flex items-center">
      <div class="w-full">
        <Badge className="mb-6 bg-primary/10 text-primary border-primary/20 text-lg px-4 py-2">Service Areas</Badge>

        <h1 class="text-5xl font-display text-white mb-6 leading-tight">
          Spanish-Inspired Venue Serving the <span class="text-primary">Denver Metro Area</span>
        </h1>

        <p class="text-xl text-white/90 max-w-5xl mx-auto leading-relaxed mb-8">
          Moody Spanish architecture meets modern intimacy. Our Westminster venue creates 
          authentic experiences for 50-100 guests throughout the Denver metro area. Warm, 
          curated, effortless — your vision, our space.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#service-areas-grid" class="btn-primary-lg">
            See the Space
          </a>
          <a href="/venue" class="btn-outline-lg">
            Your Vision Starts Here
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Offerings Section - Available for All Service Areas -->
  <section class="py-20 px-6 bg-card/30">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <Badge className="mb-4 bg-primary/10 text-primary border-primary/20">Our Offerings</Badge>
        <h2 class="text-4xl font-display text-foreground mb-4">Spanish-Inspired. Intimate. All Yours.</h2>
        <p class="text-lg text-muted-foreground max-w-5xl mx-auto">Moody Spanish charm meets effortless modern execution. Full-service simplicity for 50-100 guests.</p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <Card className="bg-card border-primary/20 hover-lift">
          <CardHeader className="text-center">
            <CardTitle className="text-xl">Intimate Spanish-Inspired Venue</CardTitle>
          </CardHeader>
          <CardContent className="space-y-3 text-center">
            <p class="text-sm text-muted-foreground">Moody architecture, warm lighting, authentic details. Perfect for 50-100 guests.</p>
            <a href="/venue" class="btn-primary w-full">See the Space</a>
          </CardContent>
        </Card>

        <Card className="bg-card border-primary/20 hover-lift">
          <CardHeader className="text-center">
            <CardTitle className="text-xl">Latin-Inspired Catering & Bar</CardTitle>
          </CardHeader>
          <CardContent className="space-y-3 text-center">
            <p class="text-sm text-muted-foreground">Curated Latin-American flavors with modern presentation. Full bar service.</p>
            <a href="/catering" class="btn-primary w-full">Explore Menus</a>
          </CardContent>
        </Card>
      </div>
    </div>
  </section>

  <!-- Service Areas Grid -->
  <section id="service-areas-grid" class="py-20 px-6 bg-background">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <Badge className="mb-4 bg-primary/10 text-primary border-primary/20">Service Areas</Badge>
        <h2 class="text-4xl font-display text-foreground mb-4">Your Vision, Our Westminster Space</h2>
        <p class="text-lg text-muted-foreground max-w-5xl mx-auto">
          Conveniently located to serve authentic celebrations throughout the Denver metro. 
          Spanish-inspired intimacy, modern execution, effortless for your guests.
        </p>
      </div>

      {/* Primary Service Areas */}
      {sortedServiceAreas.filter(area => area.data.priority === 'primary').length > 0 && (
        <div class="mb-16">
          <h3 class="text-2xl font-display text-foreground mb-8 text-center">Intimate by Design, Effortless by Nature</h3>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {sortedServiceAreas.filter(area => area.data.priority === 'primary').map(serviceArea => {
              return (
                <Card className="bg-card border-primary/20 hover-lift transition-all duration-300 group">
                  <CardHeader className="text-center">
                    <CardTitle className="text-2xl font-display text-foreground mb-2">
                      {serviceArea.data.city}, {serviceArea.data.state}
                    </CardTitle>
                    <CardDescription className="text-base text-primary font-medium mb-2">
                      {serviceArea.data.region}
                    </CardDescription>
                    <div class="text-sm text-muted-foreground">
                      Spanish-inspired venue serving your area
                    </div>
                  </CardHeader>
                  <CardContent className="space-y-6">
                    {serviceArea.data.demographics?.description && (
                      <p class="text-sm text-muted-foreground text-center">
                        {serviceArea.data.demographics.description}
                      </p>
                    )}

                    {serviceArea.data.localInfo?.transportation && (
                      <div class="space-y-3">
                        <h4 class="font-medium text-foreground text-sm">Location Benefits:</h4>
                        <div class="space-y-2 text-sm text-muted-foreground">
                          {serviceArea.data.localInfo.transportation.fromDenver && (
                            <div class="flex items-start gap-2">
                              <span class="text-primary text-sm">•</span>
                              <span>From Denver: {serviceArea.data.localInfo.transportation.fromDenver}</span>
                            </div>
                          )}
                          {serviceArea.data.localInfo.transportation.parking && (
                            <div class="flex items-start gap-2">
                              <span class="text-primary text-sm">•</span>
                              <span>{serviceArea.data.localInfo.transportation.parking}</span>
                            </div>
                          )}
                          {serviceArea.data.localInfo.landmarks && serviceArea.data.localInfo.landmarks.length > 0 && (
                            <div class="flex items-start gap-2">
                              <span class="text-primary text-sm">•</span>
                              <span>Near {serviceArea.data.localInfo.landmarks[0]}</span>
                            </div>
                          )}
                        </div>
                      </div>
                    )}

                    <div class="pt-4 border-t border-primary/10">
                      <a
                        href={`/service-areas/${serviceArea.data.citySlug}`}
                        class="block w-full text-center bg-primary hover:bg-primary/90 text-primary-foreground px-4 py-3 rounded-md text-sm font-medium transition-colors"
                      >
                        See the Space
                      </a>
                    </div>
                  </CardContent>
                </Card>
              );
            })}
          </div>
        </div>
      )}

      {/* Secondary Service Areas */}
      {sortedServiceAreas.filter(area => area.data.priority === 'secondary').length > 0 && (
        <div class="mb-16">
          <h3 class="text-2xl font-display text-foreground mb-8 text-center">Additional Service Areas</h3>
          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
            {sortedServiceAreas.filter(area => area.data.priority === 'secondary').map(serviceArea => {
              return (
                <Card className="bg-card border-primary/20 hover-lift transition-all duration-300 group text-center">
                  <CardContent className="p-6">
                    <h4 class="text-lg font-display text-foreground mb-2">
                      {serviceArea.data.city}
                    </h4>
                    <div class="text-sm text-muted-foreground mb-3">
                      Spanish-inspired venue serving your area
                    </div>
                    {serviceArea.data.localInfo?.transportation?.fromDenver && (
                      <div class="text-xs text-muted-foreground mb-4">
                        {serviceArea.data.localInfo.transportation.fromDenver}
                      </div>
                    )}
                    <a
                      href={`/service-areas/${serviceArea.data.citySlug}`}
                      class="text-sm text-primary hover:underline"
                    >
                      See the Space →
                    </a>
                  </CardContent>
                </Card>
              );
            })}
          </div>
        </div>
      )}
    </div>
  </section>

  <!-- Service Coverage -->
  <section class="py-20 px-6 bg-card/30">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12">
        <Badge className="mb-4 bg-primary/10 text-primary border-primary/20">Event Types</Badge>
        <h2 class="text-3xl font-display text-foreground mb-4">Intimate Celebrations, Authentic Moments</h2>
        <p class="text-lg text-muted-foreground">
          Spanish-inspired atmosphere for meaningful gatherings. Modern approach to timeless celebrations.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <Card className="bg-card border-primary/20">
          <CardContent className="p-6 text-center">
            <div class="text-xl font-display text-foreground mb-2">Weddings</div>
            <div class="text-sm text-muted-foreground">
              Intimate, personal celebrations with Spanish charm
            </div>
          </CardContent>
        </Card>
        <Card className="bg-card border-primary/20">
          <CardContent className="p-6 text-center">
            <div class="text-xl font-display text-foreground mb-2">Corporate</div>
            <div class="text-sm text-muted-foreground">
              Professional events with personality and style
            </div>
          </CardContent>
        </Card>
        <Card className="bg-card border-primary/20">
          <CardContent className="p-6 text-center">
            <div class="text-xl font-display text-foreground mb-2">Private Parties</div>
            <div class="text-sm text-muted-foreground">
              Birthdays, showers, and milestone moments with warmth
            </div>
          </CardContent>
        </Card>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 px-6 bg-gradient-card">
    <div class="max-w-5xl mx-auto text-center">
      <h2 class="text-4xl font-display text-foreground mb-6">Ready to Make It Real?</h2>
      <p class="text-xl mb-8 text-foreground/90">
        Your vision deserves the right space. Spanish charm, modern confidence, 
        effortless execution for 50-100 guests throughout the Denver metro.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact#book" class="btn-primary">
          Let's Connect
        </a>
        <a href="/venue" class="btn-outline">See the Space</a>
      </div>
    </div>
  </section>
</Layout>