---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';

export const prerender = true;

// Get venue types from pages collection
const pages = await getCollection('pages');
const venueTypePages = pages.filter(page =>
  page.slug.startsWith('venue-types/') && page.slug !== 'venue-types/index'
);

const seo = {
  title: "Venue Types & Styles - Find Your Perfect Event Space",
  description: "Explore different venue types and styles for your wedding or event. From intimate garden ceremonies to grand celebrations, find the perfect space for your special occasion.",
  keywords: "venue types, wedding venue styles, event spaces, ceremony locations, reception venues"
};
---

<Layout title={seo.title} description={seo.description} keywords={seo.keywords}>
  <!-- Hero Section -->
  <section class="relative py-24 px-6 overflow-hidden" transition:name="venue-types-hero">
    <!-- Dark Black Gradient Background -->
    <div class="absolute inset-0 bg-gradient-to-r from-black/80 via-black/60 to-black/40"></div>
    <!-- Subtle Pattern Overlay for Texture -->
    <div class="absolute inset-0 bg-pattern-dots opacity-10"></div>

    <!-- Content -->
    <div class="relative max-w-6xl mx-auto text-center min-h-[500px] flex items-center">
      <div class="w-full">
        <Badge className="mb-6 bg-primary/10 text-primary border-primary/20 text-lg px-4 py-2">Venue Types</Badge>

        <h1 class="text-5xl font-display text-white mb-6 leading-tight">
          Find Your Perfect <span class="text-primary">Venue Style</span>
        </h1>

        <p class="text-xl text-white/90 max-w-5xl mx-auto leading-relaxed mb-8">
          Every celebration is unique. Explore our different venue types and styles to find
          the perfect space that matches your vision, from intimate garden ceremonies to
          grand celebrations.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#venue-types" class="btn-primary-lg">
            Explore venue types
          </a>
          <a href="/service-areas" class="btn-outline-lg">
            View Service Areas
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Venue Types Grid -->
  <section id="venue-types" class="py-20 px-6 bg-background">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <Badge className="mb-4 bg-primary/10 text-primary border-primary/20">Choose Your Style</Badge>
        <h2 class="text-4xl font-display text-foreground mb-4">Venue Types & Styles</h2>
        <p class="text-lg text-muted-foreground max-w-5xl mx-auto">
          Different moods, same intention: a good night. Pick what fits your vibe.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {venueTypePages.map(page => (
          <Card className="bg-card border-primary/20 hover-lift transition-all duration-300 group">
            <CardHeader className="text-center">
              <CardTitle className="text-2xl font-display text-foreground mb-2">
                {page.data.title.split(' - ')[0]}
              </CardTitle>
              <CardDescription className="text-base text-primary font-medium mb-2">
                Specialized Venue Type
              </CardDescription>
              <div class="text-sm text-muted-foreground">
                {page.data.description.split('.')[0]}.
              </div>
            </CardHeader>
            <CardContent className="space-y-4">
              <p class="text-sm text-muted-foreground text-center">
                Good for {page.data.title.toLowerCase().includes('intimate') ? 'cozy, personal' : 'bigger, lively'} gatherings.
              </p>

              <div class="pt-4 border-t border-primary/10">
                <a
                  href={`/${page.slug}`}
                  class="block w-full text-center bg-primary hover:bg-primary/90 text-primary-foreground px-4 py-3 rounded-md text-sm font-medium transition-colors"
                >
                  Learn More ‚Üí
                </a>
              </div>
            </CardContent>
          </Card>
        ))}

        {venueTypePages.length === 0 && (
          <div class="col-span-full text-center py-12">
            <p class="text-lg text-muted-foreground">More venue types coming soon!</p>
            <p class="text-sm text-muted-foreground mt-2">
              Contact us to discuss your specific venue needs.
            </p>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Additional Venue Options -->
  <section class="py-20 px-6 bg-card/30">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12">
        <Badge className="mb-4 bg-primary/10 text-primary border-primary/20">More Options</Badge>
        <h2 class="text-3xl font-display text-foreground mb-4">Additional Venue Styles</h2>
        <p class="text-lg text-muted-foreground">
          Looking for something specific? We can help you find the perfect venue style for your unique celebration.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <Card className="bg-card border-primary/20">
          <CardContent className="p-6 text-center">
            <div class="text-4xl mb-4">üè∞</div>
            <div class="text-xl font-display text-foreground mb-2">Historic Venues</div>
            <div class="text-sm text-muted-foreground">
              Vintage bones, moody corners
            </div>
          </CardContent>
        </Card>
        <Card className="bg-card border-primary/20">
          <CardContent className="p-6 text-center">
            <div class="text-4xl mb-4">üå≥</div>
            <div class="text-xl font-display text-foreground mb-2">Garden Settings</div>
            <div class="text-sm text-muted-foreground">
              Greenery, light, open air
            </div>
          </CardContent>
        </Card>
        <Card className="bg-card border-primary/20">
          <CardContent className="p-6 text-center">
            <div class="text-4xl mb-4">üèõÔ∏è</div>
            <div class="text-xl font-display text-foreground mb-2">Modern Spaces</div>
            <div class="text-sm text-muted-foreground">
              Clean lines, flexible layout
            </div>
          </CardContent>
        </Card>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 px-6 bg-gradient-card">
    <div class="max-w-5xl mx-auto text-center">
      <h2 class="text-4xl font-display text-foreground mb-6">Not sure what fits?</h2>
      <p class="text-xl mb-8 text-foreground/90">
        Tell us your vibe, guest count, and budget. We‚Äôll point you to the right fit.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact#book" class="btn-primary">
          Schedule a Consultation
        </a>
        <a href="/service-areas" class="btn-outline">
          View Service Areas
        </a>
      </div>
    </div>
  </section>
</Layout>
