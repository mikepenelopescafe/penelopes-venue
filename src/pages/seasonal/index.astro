---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';

export const prerender = true;

// Get seasonal pages
const pages = await getCollection('pages');
const seasonalPages = pages.filter(page =>
  page.slug.startsWith('seasonal/') && page.slug !== 'seasonal/index'
);

const seo = {
  title: "Seasonal Wedding & Event Venues Near Denver — Winter, Spring, Summer, Fall",
  description: "Explore seasonal wedding and event ideas near Denver. Holiday parties, winter weddings, and warm‑weather celebrations with Spanish‑inspired style.",
  keywords: "winter wedding venue denver, spring wedding denver, summer wedding denver, fall wedding denver, holiday party venue"
};
---

<Layout title={seo.title} description={seo.description} keywords={seo.keywords}>
  <!-- Hero Section -->
  <section class="relative py-24 px-6 overflow-hidden" transition:name="seasonal-hero">
    <div class="absolute inset-0 bg-gradient-to-r from-black/80 via-black/60 to-black/40"></div>
    <div class="absolute inset-0 bg-pattern-dots opacity-10"></div>

    <div class="relative max-w-6xl mx-auto text-center min-h-[500px] flex items-center">
      <div class="w-full">
        <Badge className="mb-6 bg-primary/10 text-primary border-primary/20 text-lg px-4 py-2">Seasonal</Badge>

        <h1 class="text-5xl font-display text-white mb-6 leading-tight">
          Seasonal Venues & Ideas for <span class="text-primary">Every Time of Year</span>
        </h1>

        <p class="text-xl text-white/90 max-w-5xl mx-auto leading-relaxed mb-8">
          From cozy winter weddings and holiday parties to lush spring, sun‑washed summer, and moody fall—
          explore pages curated for each season.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#seasonal-pages" class="btn-primary-lg">
            Browse Seasonal Pages
          </a>
          <a href="/venue" class="btn-outline-lg">
            See Packages
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Seasonal Pages Grid -->
  <section id="seasonal-pages" class="py-20 px-6 bg-background">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <Badge className="mb-4 bg-primary/10 text-primary border-primary/20">Curated by Season</Badge>
        <h2 class="text-4xl font-display text-foreground mb-4">Winter, Spring, Summer, Fall</h2>
        <p class="text-lg text-muted-foreground max-w-5xl mx-auto">
          Find inspiration, menus, and planning tips for the season you love.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {seasonalPages.map(page => (
          <Card className="bg-card border-primary/20 hover-lift transition-all duration-300 group">
            <CardHeader className="text-center">
              <CardTitle className="text-2xl font-display text-foreground mb-2">
                {page.data.title.split(' | ')[0]}
              </CardTitle>
              <CardDescription className="text-base text-primary font-medium mb-2">
                Seasonal Guide
              </CardDescription>
              <div class="text-sm text-muted-foreground">
                {page.data.description?.split('.')[0]}.
              </div>
            </CardHeader>
            <CardContent className="space-y-4">
              <p class="text-sm text-muted-foreground text-center">
                {page.data.season ? `${page.data.season[0].toUpperCase()}${page.data.season.slice(1)}` : 'Seasonal'} details, menus, and layouts.
              </p>

              <div class="pt-4 border-t border-primary/10">
                <a
                  href={`/${page.slug}`}
                  class="block w-full text-center bg-primary hover:bg-primary/90 text-primary-foreground px-4 py-3 rounded-md text-sm font-medium transition-colors"
                >
                  Learn More →
                </a>
              </div>
            </CardContent>
          </Card>
        ))}

        {seasonalPages.length === 0 && (
          <div class="col-span-full text-center py-12">
            <p class="text-lg text-muted-foreground">Seasonal pages are coming soon.</p>
            <p class="text-sm text-muted-foreground mt-2">
              In the meantime, explore our venue packages and gallery.
            </p>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 px-6 bg-gradient-card">
    <div class="max-w-5xl mx-auto text-center">
      <h2 class="text-4xl font-display text-foreground mb-6">Plan for Your Season</h2>
      <p class="text-xl mb-8 text-foreground/90">
        Winter’s cozy light. Spring’s fresh energy. Summer’s long golden hours. Fall’s rich mood.
        We’ll make it effortless.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact#book" class="btn-primary">
          Check Availability
        </a>
        <a href="/venue" class="btn-outline">
          View Pricing
        </a>
      </div>
    </div>
  </section>
</Layout>


