---
import Layout from '@/layouts/Layout.astro';
import { Badge } from '@/components/ui/badge';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';

const seo = {
  title: "Venue Rental Pricing & Packages - Penelope's Boutique Venue",
  description: "Transparent pricing for venue rental, catering, and bar services. Combined venue space (up to 135-145 guests) available 24/7. Flexible time blocks with all-American and Latin fusion catering, dual bar menus included.",
  keywords: "venue rental pricing, event venue packages, party venue cost, catering packages, bar service pricing, Westminster CO venue, 24/7 venue rental",
};

const venuePricing = {
  combined: {
    capacity: "Up to 135-145 guests",
    squareFootage: "~1,350-1,450 sq ft",
    offPeak: {
      threeHour: "$750",
      fourHour: "$1,100",
      eightHour: "$2,000"
    },
    peak: {
      fourHour: "$1,800",
      eightHour: "$3,200"
    },
    premium: {
      fourHour: "$2,500",
      eightHour: "$4,500"
    }
  }
};

const addOns = [
  { name: "Microphone", price: "$50" },
  { name: "Projector", price: "$75" },
  { name: "Extended Hours", price: "$250/hour" },
  { name: "Bar Service", price: "$300 + drinks minimum" }
];

const cateringPackages = {
  american: {
    name: "All-American",
    description: "Hearty, crowd-pleasing dishes with fresh, local ingredients",
    priceRange: "$15-45/guest",
    serviceStyles: {
      plated: "Formal, seated service (+$1-3/guest)",
      buffet: "Casual, self-serve (+$0/guest)",
      passed: "Staff-circulated for mingling (+$1-2/guest)"
    },
    packages: [
      { name: "Bar Bites Package", buffetPrice: "$18/guest", passedPrice: "$20/guest", description: "3 Small Plates + Side" },
      { name: "All-American Feast", platedPrice: "$35-45/guest", buffetPrice: "$32-42/guest", description: "Small Plate + Main + Dessert" }
    ]
  },
  latinFusion: {
    name: "Latin Fusion",
    description: "Vibrant flavors from Mexico, Peru, Cuba, and beyond",
    priceRange: "$15-45/guest",
    serviceStyles: {
      plated: "Formal, seated service (+$1-3/guest)",
      buffet: "Casual, self-serve (+$0/guest)",
      passed: "Staff-circulated for mingling (+$1-2/guest)"
    },
    packages: [
      { name: "Tasting Plate", buffetPrice: "$18/guest", passedPrice: "$20/guest", description: "3 Small Plates + Dessert" },
      { name: "Full Latin Feast", platedPrice: "$38-48/guest", buffetPrice: "$35-45/guest", description: "Small Plate + Main + Dessert" }
    ]
  }
};

const barMenus = {
  american: {
    name: "All-American Bar Menu",
    description: "Classic American drinks with a modern twist, perfect for pairing with all-American catering",
    cocktails: [
      { name: "Old Fashioned", price: "$14", description: "Bourbon, bitters, orange peel, cherry" },
      { name: "Margarita", price: "$12", description: "Tequila, lime, triple sec, salt rim" },
      { name: "Moscow Mule", price: "$13", description: "Vodka, ginger beer, lime, mint" },
      { name: "Bloody Mary", price: "$13", description: "Vodka, tomato juice, celery, spices" },
      { name: "Virgin Lemonade Spritzer", price: "$8", description: "Berries, mint (mocktail)" }
    ],
    wines: [
      { name: "California Chardonnay", price: "$10/glass", description: "Buttery, crisp white" },
      { name: "California Cabernet", price: "$12/glass", description: "Bold, oaky red" },
      { name: "California Sparkling Brut", price: "$11/glass", description: "Festive sparkling" }
    ]
  },
  latin: {
    name: "Latin-Inspired Bar Menu",
    description: "Vibrant flavors from Mexico, Peru, Cuba, and beyond, complementing Latin fusion catering",
    cocktails: [
      { name: "Mojito", price: "$13", description: "Rum, mint, lime, soda" },
      { name: "Paloma", price: "$12", description: "Tequila, grapefruit, lime, soda" },
      { name: "Caipirinha", price: "$14", description: "Brazilian cachaça, lime, sugar" },
      { name: "Pisco Sour", price: "$14", description: "Peruvian pisco, lime, egg white, bitters" },
      { name: "Virgin Piña Colada", price: "$8", description: "Pineapple, coconut (mocktail)" }
    ],
    wines: [
      { name: "Argentine Torrontés", price: "$10/glass", description: "Floral, crisp white" },
      { name: "Argentine Malbec", price: "$12/glass", description: "Bold, berry red" },
      { name: "Spanish Cava", price: "$11/glass", description: "Festive sparkling" }
    ]
  }
};

const barPackages = [
  { name: "Open Bar (2 hours)", beerWine: "$25/guest", fullBar: "$35/guest" },
  { name: "Cash Bar", description: "Guests pay per drink, meets $150 minimum" }
];
---

<Layout title={seo.title} description={seo.description} keywords={seo.keywords}>
  <!-- Hero Section -->
  <section class="relative py-24 px-6 overflow-hidden">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 bg-cover bg-center bg-no-repeat"
         style="background-image: url('/penelope-diningroom.webp');">
      <!-- Gradient Overlay for Text Readability -->
      <div class="absolute inset-0 bg-gradient-to-r from-black/80 via-black/60 to-black/40"></div>
      <!-- Subtle Pattern Overlay for Texture -->
      <div class="absolute inset-0 bg-pattern-dots opacity-10"></div>
    </div>

    <!-- Content Container -->
    <div class="relative max-w-6xl mx-auto text-center min-h-[500px] flex items-center">
      <div class="w-full">
        <Badge className="mb-6 bg-primary/10 text-primary border-primary/20 text-lg px-4 py-2">Transparent Pricing</Badge>

        <h1 class="text-5xl font-display text-white mb-6 leading-tight">
          Venue Rental & <span class="text-primary">Package Pricing</span>
        </h1>

        <p class="text-xl text-white/90 max-w-3xl mx-auto leading-relaxed mb-8">
          Clear, fair pricing for your perfect event. Our combined venue space is available 24/7 with flexible
          time blocks from 3-8 hours, perfect for intimate gatherings to vibrant celebrations of up to 145 guests.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#venue-rental" class="btn-primary-lg">
            View Venue Pricing
          </a>
          <a href="#catering" class="btn-outline-lg">
            Explore Catering
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Venue Rental Pricing Section -->
  <section id="venue-rental" class="py-20 px-6 bg-background">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <Badge className="mb-4 bg-primary/10 text-primary border-primary/20">Venue Rental</Badge>
        <h2 class="text-4xl font-display text-foreground mb-4">Combined Venue Space</h2>
        <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
          Our complete venue space is available 24/7 for your event. The main dining room's vibrancy
          combines seamlessly with the back room's cozy intimacy, creating the perfect setting for up to 145 guests.
        </p>
      </div>

      <!-- Pricing Cards -->
      <div class="grid lg:grid-cols-3 gap-8 mb-12">
        <!-- Off-Peak Pricing (Sundays & Weekdays) -->
        <Card className="bg-card border-primary/20 hover-lift transition-all duration-300">
          <CardHeader className="text-center">
            <CardTitle className="text-2xl font-display text-foreground mb-2">Off-Peak</CardTitle>
            <CardDescription className="text-lg text-primary font-medium">Sundays & Weekdays</CardDescription>
            <div class="text-sm text-muted-foreground mt-2">Mon-Thu & Sun • More affordable rates</div>
          </CardHeader>
          <CardContent className="space-y-4">
            <div class="space-y-3 text-center">
              <div class="p-4 bg-primary/5 rounded-lg">
                <div class="text-sm text-muted-foreground mb-1">3-Hour Block</div>
                <div class="text-2xl font-bold text-primary">{venuePricing.combined.offPeak.threeHour}</div>
                <div class="text-xs text-muted-foreground">Minimum booking</div>
              </div>
              <div class="p-4 bg-primary/5 rounded-lg">
                <div class="text-sm text-muted-foreground mb-1">4-Hour Block</div>
                <div class="text-2xl font-bold text-primary">{venuePricing.combined.offPeak.fourHour}</div>
                <div class="text-xs text-muted-foreground">$275/hour</div>
              </div>
              <div class="p-4 bg-primary/5 rounded-lg">
                <div class="text-sm text-muted-foreground mb-1">8-Hour Block</div>
                <div class="text-2xl font-bold text-primary">{venuePricing.combined.offPeak.eightHour}</div>
                <div class="text-xs text-muted-foreground">$250/hour</div>
              </div>
            </div>
          </CardContent>
        </Card>

        <!-- Peak Pricing (Fridays, Saturdays & Holiday Sundays) -->
        <Card className="bg-card border-primary/20 hover-lift transition-all duration-300">
          <CardHeader className="text-center">
            <CardTitle className="text-2xl font-display text-foreground mb-2">Peak</CardTitle>
            <CardDescription className="text-lg text-primary font-medium">Fri, Sat & Holiday Sun</CardDescription>
            <div class="text-sm text-muted-foreground mt-2">Higher demand periods</div>
          </CardHeader>
          <CardContent className="space-y-4">
            <div class="space-y-3 text-center">
              <div class="p-4 bg-primary/5 rounded-lg">
                <div class="text-sm text-muted-foreground mb-1">4-Hour Block</div>
                <div class="text-2xl font-bold text-primary">{venuePricing.combined.peak.fourHour}</div>
                <div class="text-xs text-muted-foreground">$450/hour</div>
              </div>
              <div class="p-4 bg-primary/5 rounded-lg">
                <div class="text-sm text-muted-foreground mb-1">8-Hour Block</div>
                <div class="text-2xl font-bold text-primary">{venuePricing.combined.peak.eightHour}</div>
                <div class="text-xs text-muted-foreground">$400/hour</div>
              </div>
            </div>
            <div class="text-center p-3 bg-accent/10 rounded-lg">
              <div class="text-sm text-muted-foreground mb-1">3-hour blocks not available</div>
              <div class="text-xs text-muted-foreground">during peak periods</div>
            </div>
          </CardContent>
        </Card>

        <!-- Premium Holiday Pricing -->
        <Card className="bg-card border-primary/20 hover-lift transition-all duration-300">
          <CardHeader className="text-center">
            <CardTitle className="text-2xl font-display text-foreground mb-2">Premium Holidays</CardTitle>
            <CardDescription className="text-lg text-primary font-medium">Special Dates</CardDescription>
            <div class="text-sm text-muted-foreground mt-2">NYE, Christmas, Thanksgiving, 4th of July, Halloween</div>
          </CardHeader>
          <CardContent className="space-y-4">
            <div class="space-y-3 text-center">
              <div class="p-4 bg-primary/5 rounded-lg">
                <div class="text-sm text-muted-foreground mb-1">4-Hour Block</div>
                <div class="text-2xl font-bold text-primary">{venuePricing.combined.premium.fourHour}</div>
                <div class="text-xs text-muted-foreground">$625/hour</div>
              </div>
              <div class="p-4 bg-primary/5 rounded-lg">
                <div class="text-sm text-muted-foreground mb-1">8-Hour Block</div>
                <div class="text-2xl font-bold text-primary">{venuePricing.combined.premium.eightHour}</div>
                <div class="text-xs text-muted-foreground">$562.50/hour</div>
              </div>
            </div>
            <div class="text-center p-3 bg-accent/10 rounded-lg">
              <div class="text-sm text-muted-foreground mb-1">3-hour blocks not available</div>
              <div class="text-xs text-muted-foreground">during premium holidays</div>
            </div>
          </CardContent>
        </Card>
      </div>

      <!-- Venue Details -->
      <div class="bg-card/50 rounded-xl p-8 mb-12">
        <div class="text-center mb-8">
          <h3 class="text-2xl font-display text-foreground mb-4">Venue Specifications</h3>
          <div class="grid md:grid-cols-3 gap-6 text-center">
            <div>
              <div class="text-3xl font-bold text-primary mb-2">{venuePricing.combined.capacity}</div>
              <div class="text-muted-foreground">Maximum Capacity</div>
            </div>
            <div>
              <div class="text-3xl font-bold text-primary mb-2">{venuePricing.combined.squareFootage}</div>
              <div class="text-muted-foreground">Total Square Footage</div>
            </div>
            <div>
              <div class="text-3xl font-bold text-primary mb-2">24/7</div>
              <div class="text-muted-foreground">Availability</div>
            </div>
          </div>
        </div>
      </div>

      <!-- What's Included -->
      <div class="bg-card/50 rounded-xl p-8 mb-12">
        <h3 class="text-xl font-display text-foreground mb-6 text-center">What's Included in Your Rental</h3>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="text-center">
            <div class="text-3xl mb-3">🪑</div>
            <h4 class="font-medium text-foreground mb-2">Tables & Chairs</h4>
            <p class="text-sm text-muted-foreground">Complete setup for your event</p>
          </div>
          <div class="text-center">
            <div class="text-3xl mb-3">💡</div>
            <h4 class="font-medium text-foreground mb-2">Ambient Lighting</h4>
            <p class="text-sm text-muted-foreground">Warm, welcoming atmosphere</p>
          </div>
          <div class="text-center">
            <div class="text-3xl mb-3">🧹</div>
            <h4 class="font-medium text-foreground mb-2">Setup & Cleanup</h4>
            <p class="text-sm text-muted-foreground">We handle everything</p>
          </div>
          <div class="text-center">
            <div class="text-3xl mb-3">🧸</div>
            <h4 class="font-medium text-foreground mb-2">Basic Linens</h4>
            <p class="text-sm text-muted-foreground">White or neutral tablecloths & napkins</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Add-ons Section -->
  <section class="py-20 px-6 bg-card/30">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <Badge className="mb-4 bg-primary/10 text-primary border-primary/20">Enhance Your Event</Badge>
        <h2 class="text-3xl font-display text-foreground mb-4">Optional Add-ons</h2>
        <p class="text-lg text-muted-foreground">
          Customize your experience with these additional services
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        {addOns.map(addon => (
          <div class="flex items-center justify-between p-4 bg-card rounded-lg border border-primary/10">
            <span class="font-medium text-foreground">{addon.name}</span>
            <span class="text-primary font-bold">{addon.price}</span>
          </div>
        ))}
      </div>

      <div class="mt-8 text-center">
        <p class="text-sm text-muted-foreground">
          Extended hours available up to 2 additional hours • Subject to availability
        </p>
      </div>
    </div>
  </section>

  <!-- Catering Section -->
  <section id="catering" class="py-20 px-6 bg-background">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <Badge className="mb-4 bg-primary/10 text-primary border-primary/20">Culinary Excellence</Badge>
        <h2 className="text-4xl font-display text-foreground mb-4">Catering Options</h2>
        <p className="text-lg text-muted-foreground max-w-2xl mx-auto">
          From our full commercial kitchen, choose between All-American comfort food or vibrant Latin fusion flavors.
          Customize with plated, buffet, or passed appetizer service styles.
        </p>
      </div>

      <!-- Service Style Information -->
      <div class="bg-card/50 rounded-xl p-8 mb-12">
        <h3 class="text-xl font-display text-foreground mb-6 text-center">Service Styles</h3>
        <div class="grid md:grid-cols-3 gap-6">
          <div class="text-center p-4 bg-primary/5 rounded-lg">
            <div class="text-lg font-medium text-foreground mb-2">Plated Service</div>
            <div class="text-primary font-bold mb-1">+$1-3/guest</div>
            <p class="text-sm text-muted-foreground">Formal, seated service with dedicated staff</p>
          </div>
          <div class="text-center p-4 bg-primary/5 rounded-lg">
            <div class="text-lg font-medium text-foreground mb-2">Buffet Service</div>
            <div class="text-primary font-bold mb-1">+$0/guest</div>
            <p class="text-sm text-muted-foreground">Casual, self-serve setup for relaxed gatherings</p>
          </div>
          <div class="text-center p-4 bg-primary/5 rounded-lg">
            <div class="text-lg font-medium text-foreground mb-2">Passed Appetizers</div>
            <div class="text-primary font-bold mb-1">+$1-2/guest</div>
            <p class="text-sm text-muted-foreground">Staff-circulated for mingling events</p>
          </div>
        </div>
      </div>

      <!-- Catering Cards -->
      <div class="grid lg:grid-cols-2 gap-8 mb-12">
        <!-- All-American Catering -->
        <Card class="bg-card border-primary/20 hover-lift transition-all duration-300">
          <CardHeader>
            <CardTitle class="text-2xl font-display text-foreground">{cateringPackages.american.name} Catering</CardTitle>
            <CardDescription class="text-primary font-medium">{cateringPackages.american.priceRange}</CardDescription>
            <p class="text-sm text-muted-foreground mt-2">{cateringPackages.american.description}</p>
          </CardHeader>
          <CardContent class="space-y-4">
            {cateringPackages.american.packages.map(pkg => (
              <div class="p-4 bg-primary/5 rounded-lg">
                <div class="flex justify-between items-start mb-2">
                  <h4 class="font-medium text-foreground">{pkg.name}</h4>
                  <div class="text-right">
                    {pkg.platedPrice && <div class="text-primary font-bold">{pkg.platedPrice}</div>}
                    {pkg.buffetPrice && <div class="text-sm text-primary font-bold">{pkg.buffetPrice}</div>}
                    {pkg.passedPrice && <div class="text-sm text-primary font-bold">{pkg.passedPrice}</div>}
                  </div>
                </div>
                <p class="text-sm text-muted-foreground">{pkg.description}</p>
              </div>
            ))}
            <div class="text-xs text-muted-foreground">
              <strong>$300 kitchen fee • $200 food minimum</strong>
            </div>
          </CardContent>
        </Card>

        <!-- Latin Fusion Catering -->
        <Card class="bg-card border-primary/20 hover-lift transition-all duration-300">
          <CardHeader>
            <CardTitle class="text-2xl font-display text-foreground">{cateringPackages.latinFusion.name} Catering</CardTitle>
            <CardDescription class="text-primary font-medium">{cateringPackages.latinFusion.priceRange}</CardDescription>
            <p class="text-sm text-muted-foreground mt-2">{cateringPackages.latinFusion.description}</p>
          </CardHeader>
          <CardContent class="space-y-4">
            {cateringPackages.latinFusion.packages.map(pkg => (
              <div class="p-4 bg-primary/5 rounded-lg">
                <div class="flex justify-between items-start mb-2">
                  <h4 class="font-medium text-foreground">{pkg.name}</h4>
                  <div class="text-right">
                    {pkg.platedPrice && <div class="text-primary font-bold">{pkg.platedPrice}</div>}
                    {pkg.buffetPrice && <div class="text-sm text-primary font-bold">{pkg.buffetPrice}</div>}
                    {pkg.passedPrice && <div class="text-sm text-primary font-bold">{pkg.passedPrice}</div>}
                  </div>
                </div>
                <p class="text-sm text-muted-foreground">{pkg.description}</p>
              </div>
            ))}
            <div class="text-xs text-muted-foreground">
              <strong>$300 kitchen fee • $200 food minimum</strong>
            </div>
          </CardContent>
        </Card>
      </div>

      <!-- Dietary Information -->
      <div class="bg-card/50 rounded-xl p-8">
        <h3 class="text-xl font-display text-foreground mb-4 text-center">Dietary Accommodations</h3>
        <div class="grid md:grid-cols-3 gap-6 text-center">
          <div>
            <div class="text-2xl mb-2">🌱</div>
            <h4 class="font-medium text-foreground mb-2">Vegetarian & Vegan</h4>
            <p class="text-sm text-muted-foreground">Multiple options available</p>
          </div>
          <div>
            <div class="text-2xl mb-2">🥜</div>
            <h4 class="font-medium text-foreground mb-2">Allergen Aware</h4>
            <p class="text-sm text-muted-foreground">Gluten-free and nut-free options</p>
          </div>
          <div>
            <div class="text-2xl mb-2">📝</div>
            <h4 class="font-medium text-foreground mb-2">Custom Requests</h4>
            <p class="text-sm text-muted-foreground">Disclose allergies 7 days prior</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Bar Service Section -->
  <section class="py-20 px-6 bg-card/30">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <Badge className="mb-4 bg-primary/10 text-primary border-primary/20">Premium Beverages</Badge>
        <h2 class="text-3xl font-display text-foreground mb-4">Bar Service & Menus</h2>
        <p class="text-lg text-muted-foreground">
          Choose between All-American or Latin-Inspired bar menus to perfectly complement your catering choice
        </p>
      </div>

      <!-- Bar Service Add-on -->
      <div class="bg-card rounded-xl p-8 mb-8">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between">
          <div>
            <h3 class="text-xl font-display text-foreground mb-2">Professional Bar Service</h3>
            <p class="text-muted-foreground mb-4 md:mb-0">Includes 1 bartender for 20+ guests • No outside alcohol permitted</p>
          </div>
          <div class="text-right">
            <div class="text-2xl font-bold text-primary">$300</div>
            <div class="text-sm text-muted-foreground">+ $150 drink minimum</div>
          </div>
        </div>
      </div>

      <!-- Bar Menus -->
      <div class="grid lg:grid-cols-2 gap-8 mb-12">
        <!-- All-American Bar Menu -->
        <Card class="bg-card border-primary/20 hover-lift transition-all duration-300">
          <CardHeader>
            <CardTitle class="text-2xl font-display text-foreground">{barMenus.american.name}</CardTitle>
            <CardDescription class="text-muted-foreground">{barMenus.american.description}</CardDescription>
          </CardHeader>
          <CardContent class="space-y-6">
            <div class="space-y-4">
              <h4 class="font-medium text-foreground mb-3">Signature Cocktails ($12-15)</h4>
              <div class="space-y-2">
                {barMenus.american.cocktails.map(cocktail => (
                  <div class="flex justify-between items-center">
                    <span class="text-muted-foreground">{cocktail.name}</span>
                    <span class="font-bold text-primary">{cocktail.price}</span>
                  </div>
                ))}
              </div>
            </div>
            <div class="space-y-4">
              <h4 class="font-medium text-foreground mb-3">Premium Wines ($10-15/glass)</h4>
              <div class="space-y-2">
                {barMenus.american.wines.map(wine => (
                  <div class="flex justify-between items-center">
                    <span class="text-muted-foreground">{wine.name}</span>
                    <span class="font-bold text-primary">{wine.price}</span>
                  </div>
                ))}
              </div>
            </div>
          </CardContent>
        </Card>

        <!-- Latin-Inspired Bar Menu -->
        <Card class="bg-card border-primary/20 hover-lift transition-all duration-300">
          <CardHeader>
            <CardTitle class="text-2xl font-display text-foreground">{barMenus.latin.name}</CardTitle>
            <CardDescription class="text-muted-foreground">{barMenus.latin.description}</CardDescription>
          </CardHeader>
          <CardContent class="space-y-6">
            <div class="space-y-4">
